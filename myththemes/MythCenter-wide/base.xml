
<mythuitheme>

  <window name="backgroundwindow">
    <imagetype name="backimg">
      <filename>ui/background.png</filename>
      <staticsize>-1,-1</staticsize>
    </imagetype>

    <font name="clock" face="Arial">
         <color>#FFFFFF</color>
         <size>18</size>
         <size:small>14</size:small>
         <size:big>22</size:big>
         <bold>yes</bold>
    </font>

    <clock name="clock">
      <area>900,40,300,40</area>
      <font>clock</font>
      <format>%DATE%, %TIME%</format>
<!--      <colonflash>yes</colonflash>
      <secondflash>yes</secondflash> -->
      <align>right</align>
    </clock>
  </window>

</mythuitheme>

