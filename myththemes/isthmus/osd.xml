<mythosdtheme>

  <!-- if timeformat is set to 'FROMSETTINGS', it will use the time format
       specified in the general mythtv settings -->
  <timeformat>h:mm ap</timeformat>
  <fadeaway>30</fadeaway>

  <font name="notifyfont">
    <color>255</color>
    <size>12</size>
    <outline>yes</outline>
  </font>

  <font name="infofont">
    <color>255</color>
    <size>16</size>
    <size:small>12</size:small>
    <shadow>2,2</shadow>
  </font>
  
   <font name="titlefont">
    <color>255</color>
    <size>16</size>
    <size:small>14</size:small>
    <shadow>2,2</shadow>
  </font>
  
  <font name="grayfont">
    <color>200</color>
    <size>14</size>
    <size:small>12</size:small>
    <outline>yes</outline>
  </font>

  <font name="infofontgray">
    <color>128</color>
    <size>16</size>
    <size:small>14</size:small>
    <shadow>2,2</shadow>
  </font>

  <font name="channelfont">
    <color>255</color>
    <size>24</size>
    <size:small>18</size:small>
    <shadow>2,2</shadow>
  </font>
 
  <font name="timefont">
    <color>255</color>
    <size>16</size>
    <size:small>14</size:small>
    <shadow>2,2</shadow>
  </font>

  <font name="settings">
    <color>220</color>
    <size>18</size>
    <size:small>16</size:small>
    <shadow>3,3</shadow>
  </font>
 
  <container name="channel_number">
    <textarea name="callsign">
       <area>25,20,300,27</area>
       <font>channelfont</font>
       <value>%CALLSIGN% - %CHANNUM%</value>
    </textarea>
  </container> 
  
  <container name="program_info" fademovement="0,6">
    <image name="background">
      <filename>osd-mid.png</filename>
      <position>0,350</position>
    </image>
    <textarea name="title">
      <area>100,355,440,22</area>
      <font>titlefont</font>
    </textarea>
    <textarea name="description">
      <multiline>yes</multiline>
      <area>100,405,500,61</area>
      <font>infofont</font>
      <value>%SUBTITLE|"|" %%DESCRIPTION%</value>
    </textarea>
    <textarea name="starttime">
      <area>100,378,440,20</area>
      <font>grayfont</font>
      <value>(%STARTTIME% - %ENDTIME%)  %LENMINS%</value>
    </textarea> 
    <image name="channelicon">
      <position>25,354</position>
      <staticsize>44,44</staticsize>
    </image>
    <textarea name="time" align="right">
        <area>515,365,100,40</area>
        <font>timefont</font>
     </textarea>
  </container>

  <container name="browse_info" fademovement="0,6">
    <image name="background">
      <filename>osd-mid.png</filename>
      <position>0,350</position>
    </image>
    <textarea name="title">
      <area>100,355,415,22</area>
      <font>titlefont</font>
      <value>%TITLE%</value>
    </textarea>
    <textarea name="starttime">
      <area>100,378,440,20</area>
      <font>grayfont</font>
      <value>(%STARTTIME% - %ENDTIME%)  %LENMINS%</value>
    </textarea>
    <textarea name="description">
      <multiline>yes</multiline>
      <area>100,405,500,61</area>
      <font>infofont</font>
      <value>%SUBTITLE|"|" %%DESCRIPTION%</value>
    </textarea>
    <image name="channelicon">
      <position>25,354</position>
      <staticsize>44,44</staticsize>
    </image>
    <textarea name="time" align="right">
        <area>515,365,100,40</area>
        <font>timefont</font>
     </textarea>
    <textarea name="callsign">
       <area>25,20,300,27</area>
       <font>channelfont</font>
       <value>%CALLSIGN% - %CHANNUM%</value>
    </textarea>
  </container>
   
  <container name="status" priority="10" fademovement="0,6">
    <image name="background">
      <filename>osd-mid.png</filename>
      <position>0,350</position>
    </image>
    <image name="sliderframe">
      <filename>slider_frame.png</filename>
      <position>123,432</position>
    </image>
    <textarea name="status">
      <area>20,363,250,27</area>
      <font>settings</font>
    </textarea>
    <slider name="statusslider" type="fill">
      <area>125,434,406,20</area>
      <filename>fill_green.png</filename>
    </slider>
    <textarea name="slidertext">
      <area>125,408,250,45</area>
      <font>infofont</font>
      <multiline>yes</multiline>
    </textarea>
    <textarea name="time" align="right">
        <area>525,365,90,40</area>
        <font>timefont</font>
     </textarea>
  </container>

  <container name="notify_cid_info" priority="10" fademovement="0,6">
    <image name="background">
      <filename>osd-alert.png</filename>
      <position>0,390</position>
    </image>
    <image name="watermark">
      <filename>phone.png</filename>
      <position>35,375</position>
    </image>
    <textarea name="notify_cid_name">
      <area>210,403,400,20</area>
      <font>infofont</font>
      <multiline>no</multiline>
    </textarea>
    <textarea name="notify_cid_num">
      <area>210,425,400,20</area>
      <font>infofont</font>
      <multiline>no</multiline>
    </textarea>
    <textarea name="notify_cid_dt">
      <area>210,447,400,20</area>
      <font>infofont</font>
      <multiline>no</multiline>
    </textarea>
  </container>

  <container name="notify_alert_text" priority="10" fademovement="0,6">
    <image name="background">
      <filename>osd-alert.png</filename>
      <position>0,390</position>
    </image>
    <textarea name="notify_text">
      <area>20,405,600,60</area>
      <font>infofont</font>
      <multiline>yes</multiline>
    </textarea>
  </container>

  <container name="editmode" fademovement="0,6">
    <image name="background">
      <filename>osd-mid.png</filename>
      <position>0,350</position>
    </image>
    <image name="sliderframe">
      <filename>slider_frame.png</filename>
      <position>123,432</position>
    </image>
    <textarea name="edit">
      <area>20,363,250,27</area>
      <font>settings</font>
      <value>Edit</value>
    </textarea>
    <slider name="editslider" type="edit">
      <area>127,434,406,20</area>
      <filename>fill_green.png</filename>
      <altfilename>fill_red.png</altfilename>
    </slider>
    <slider name="editposition" type="position">
      <area>127,428,406,40</area>
      <filename>position_marker.png</filename>
    </slider>
    <editarrow name="left">
      <filename>cut_end.png</filename>
      <area>125,431,406,40</area>
    </editarrow>
    <editarrow name="right">
      <filename>cut_start.png</filename>
      <area>125,431,406,40</area>
    </editarrow>
    <textarea name="timedisplay">
      <area>125,408,200,60</area>
      <font>infofont</font>
    </textarea>
    <textarea name="cutindicator">
      <area>40,30,100,30</area>
      <font>settings</font>
    </textarea>
    <textarea name="seekamount" align="right">
      <area>500,365,125,40</area>
      <font>timefont</font>
    </textarea>
  </container>

  <container name="settings">
    <textarea name="settings">
      <area>50,50,350,32</area>
      <font>settings</font>
    </textarea>
  </container>

 <container name="basedialog" priority="0" fademovement="0,0"> <!-- must be named this --> 
   <image name="background"> 
     <filename>popup.png</filename> 
     <position>68,44</position> 
   </image> 
   <positionimage name="selector"> 
     <filename>selector.png</filename> 
      <position>95,281</position> 
      <position>95,311</position> 
      <position>95,341</position> 
      <position>95,371</position> 
    </positionimage> 
   <textarea name="message"> 
      <area>100,70,455,220</area> 
      <font>infofont</font> 
      <multiline>yes</multiline> 
   </textarea> 
   <textarea name="option1"> 
      <area>100,285,455,30</area> 
      <font>infofont</font> 
      <altfont>infofontgray</altfont> 
   </textarea> 
   <textarea name="option2"> 
      <area>100,315,455,30</area> 
      <font>infofont</font> 
      <altfont>infofontgray</altfont> 
   </textarea> 
   <textarea name="option3"> 
      <area>100,345,455,30</area> 
      <font>infofont</font> 
      <altfont>infofontgray</altfont> 
   </textarea> 
   <textarea name="option4"> 
      <area>100,375,455,30</area> 
      <font>infofont</font> 
      <altfont>infofontgray</altfont> 
   </textarea> 
 </container> 
 

  <container name="news_scroller" priority="20">
    <image name="background">
      <filename>news_scroller.png</filename>
      <position>0,425</position>
    </image>
    <textarea name="text_scroll">
      <area>0,435,640,40</area>
      <font>settings</font>
      <scroller>yes</scroller>
      <scrollmovement>-3,0</scrollmovement> <!-- only x movement for now -->
    </textarea>
  </container>

  <container name="menu">
    <listtreemenu name="menu">
      <area>20,40,620,300</area>
      <listsize>0,0,274,260</listsize>
      <leveloffset>10</leveloffset>
      <gradient type="unselected" start="#505050" end="#000000" alpha="150">
      </gradient>
      <gradient type="selected" start="#52CA38" end="#349838" alpha="255">
      </gradient>
      <fcnfont name="infofont" function="active"></fcnfont>
      <fcnfont name="infofontgray" function="inactive"></fcnfont>
    </listtreemenu>
  </container>
    

</mythosdtheme>
