<!--

MythTV Archive GUI theme

-->
<mythuitheme>

    <!--
      The export native wizard
    -->

    <window name="exportnative">

        <font name="title" from="basesmall">
            <color>#ffff00</color>
            <dropcolor>#000000</dropcolor>
            <size>24</size>
            <shadow>3,3</shadow>
            <bold>yes</bold>
        </font>

        <font name="description" from="basesmall">
            <color>#ffffff</color>
            <size>18</size>
            <bold>no</bold>
        </font>

        <font name="detail" from="basesmall">
            <color>#ffffff</color>
            <size>14</size>
            <bold>no</bold>
        </font>

        <font name="detailtitle" from="basesmall">
            <color>#ffff00</color>
            <size>14</size>
            <bold>no</bold>
        </font>

        <font name="label" from="basesmall">
            <color>#ffff00</color>
            <size>16</size>
            <bold>yes</bold>
        </font>

        <font name="smallstatsfont" from="basesmall">
            <color>#ffffff</color>
            <size>10</size>
            <bold>no</bold>
        </font>

        <font name="statserror" from="basesmall">
            <color>#ff0000</color>
            <size>10</size>
            <bold>no</bold>
        </font>

        <imagetype name="topbgimage">
            <area>25,60,750,300</area>
            <filename>trans-cr-background.png</filename>
        </imagetype>

        <textarea name="title" from="basetextarea">
            <area>0,10,800,50</area>
            <font>title</font>
            <align>allcenter</align>
            <value>Select Archive Items</value>
        </textarea>

        <buttonlist name="archivelist" from="basebuttonlist">
            <area>50,80,695,180</area>
        </buttonlist>

        <textarea name="nofiles" from="basetextarea">
            <area>50,80,695,175</area>
            <align>allcenter</align>
            <font>description</font>
            <value>No files are selected for archive</value>
        </textarea>

        <button name="addrecording_button" from="basebutton">
            <position>150,270</position>
        </button>

        <button name="addvideo_button" from="basebutton">
            <position>490,270</position>
        </button>

        <imagetype name="bottombgimage">
            <area>25,330,650,240</area>
            <filename>trans-cr-background.png</filename>
        </imagetype>

        <textarea name="progtitle" from="basetextarea">
            <area>40,340,440,30</area>
            <font>detailtitle</font>
            <value>title goes here</value>
            <multiline>no</multiline>
        </textarea>

        <textarea name="progdatetime">
            <area>490,340,165,30</area>
            <font>detailtitle</font>
            <align>right</align>
            <value>sep 13, 2004 11:00 pm (1h 15m)</value>
            <multiline>no</multiline>
        </textarea>

        <textarea name="progdescription" from="basetextarea">
            <area>40,370,610,130</area>
            <font>detail</font>
            <value>description goes here.</value>
            <multiline>yes</multiline>
        </textarea>

        <textarea name="filesize" from="basetextarea">
            <context>2</context>
            <area>550,505,100,40</area>
            <font>detail</font>
            <align>right</align>
            <value>x.xx Gb</value>
            <multiline>yes</multiline>
        </textarea>

        <progressbar name="size_bar">
            <area>670,375,10,10</area>
            <layout>vertical</layout>
            <style>reveal</style>
            <imagetype name="background">
                <filename>ma_progressbar_background.png</filename>
            </imagetype>
            <imagetype name="progressimage">
                <filename>ma_progressbar_fill.png</filename>
            </imagetype>
        </progressbar>

        <textarea name="maxsize" from="basetextarea">
            <area>710,380,100,30</area>
            <font>smallstatsfont</font>
            <value>xxxxx mb</value>
        </textarea>

        <textarea name="minsize" from="basetextarea">
            <area>710,520,100,30</area>
            <font>smallstatsfont</font>
            <value>0 mb</value>
        </textarea>

        <textarea name="currentsize" from="basetextarea">
            <area>710,445,100,30</area>
            <font>smallstatsfont</font>
            <value>xxxxx mb</value>
        </textarea>

        <textarea name="currentsize_error" from="basetextarea">
            <area>710,445,100,30</area>
            <font>statserror</font>
            <value>xxxxx mb</value>
        </textarea>

        <!--
            button area shown on all pages
        -->
        <button name="cancel_button" from="basebutton">
            <position>35,550</position>
        </button>

        <button name="prev_button" from="basebutton">
            <position>440,550</position>
        </button>

        <button name="next_button" from="basebutton">
            <position>610,550</position>
        </button>

    </window>

  <!--
      Import Native Wizard
   -->

  <window name="import_native_wizard">
      <font name="title" face="Arial">
          <color>#ffff00</color>
          <dropcolor>#000000</dropcolor>
          <size>24</size>
          <shadow>3,3</shadow>
          <bold>yes</bold>
      </font>

      <font name="buttons" face="Arial">
          <color>#ffffff</color>
          <size>12</size>
          <bold>yes</bold>
      </font>

      <font name="edit" face="Arial">
          <color>#ffffff</color>
          <size>14</size>
          <bold>no</bold>
      </font>

      <font name="active" face="Arial">
          <color>#ffffff</color>
          <size>18</size>
          <bold>yes</bold>
      </font>

      <font name="inactive" face="Arial">
          <color>#9999cc</color>
          <size>18</size>
          <bold>yes</bold>
      </font>

      <font name="info" face="Arial">
          <color>#9999cc</color>
          <size>14</size>
          <bold>no</bold>
      </font>

      <font name="label" face="Arial">
          <color>#ffff00</color>
          <dropcolor>#000000</dropcolor>
          <size>18</size>
          <shadow>3,3</shadow>
          <bold>yes</bold>
      </font>

      <font name="detail" face="Arial">
          <color>#ffffff</color>
          <size>14</size>
          <bold>no</bold>
      </font>

      <font name="detailtitle" face="Arial">
          <color>#ffff00</color>
          <size>14</size>
          <bold>no</bold>
      </font>

      <!--
          ****************************
          first page
          ****************************
      -->

      <container name="wizardpages">
          <area>0,0,800,550</area>

          <textarea name="title" draworder="1" align="center">
              <context>1</context>
              <area>0,0,800,45</area>
              <font>title</font>
              <multiline>no</multiline>
              <value>Find Archived File</value>
          </textarea>

          <textbutton name="back_button" draworder="1">
              <context>1</context>
              <position>35,55</position>
              <image function="on" filename="text_button_on.png"></image>
              <image function="off" filename="text_button_off.png"></image>
              <image function="pushed" filename="text_button_pushed.png"></image>
              <font>buttons</font>
          </textbutton>
          <textbutton name="home_button" draworder="1">
              <context>1</context>
              <position>200,55</position>
              <image function="on" filename="text_button_on.png"></image>
              <image function="off" filename="text_button_off.png"></image>
              <image function="pushed" filename="text_button_pushed.png"></image>
              <font>buttons</font>
          </textbutton>
          <textarea name="location_label" draworder="0" align="right">
              <context>1</context>
              <area>20,105,140,30</area>
              <font>label</font>
              <multiline>no</multiline>
              <value>Location:</value>
          </textarea>
          <remoteedit name="location_edit" draworder="0" align="left">
              <context>1</context>
              <area>180,105,580,30</area>
              <font>edit</font>
          </remoteedit>

          <listbtnarea name="filelist"  draworder="1">
              <context>1</context>
              <area>20,140,760,250</area>
              <gradient type="unselected" start="#505050" end="#000000" alpha="100">
              </gradient>
              <gradient type="selected" start="#52ca38" end="#349838" alpha="255">
              </gradient>
              <fcnfont name="active" function="active"></fcnfont>
              <fcnfont name="inactive" function="inactive"></fcnfont>
              <showscrollarrows>yes</showscrollarrows>
              <showarrow>no</showarrow>
          </listbtnarea>

        <image name="image" draworder="0">
            <context>1</context>
            <position>10,400</position>
            <filename>trans-cr-background.png</filename>
            <staticsize>780,150</staticsize>
        </image>

        <textarea name="label" draworder="1" align="left">
            <context>1</context>
            <area>30,415,160,40</area>
            <font>label</font>
            <value>Title:</value>
        </textarea>

        <textarea name="label" draworder="1" align="left">
            <context>1</context>
            <area>30,455,160,40</area>
            <font>label</font>
            <value>Subtitle:</value>
        </textarea>

        <textarea name="label" draworder="1" align="left">
            <context>1</context>
            <area>30,495,160,40</area>
            <font>label</font>
            <value>Start Time:</value>
        </textarea>

        <textarea name="title_text" draworder="1" align="left">
            <context>1</context>
            <area>180,420,500,40</area>
            <font>detail</font>
            <value></value>
        </textarea>

        <textarea name="subtitle_text" draworder="1" align="left">
            <context>1</context>
            <area>180,460,500,40</area>
            <font>detail</font>
            <value></value>
        </textarea>

        <textarea name="starttime_text" draworder="1" align="left">
            <context>1</context>
            <area>180,500,500,40</area>
            <font>detail</font>
            <value></value>
        </textarea>


        <!--
            ****************************
            second page
            ****************************
        -->

        <textarea name="title" draworder="1" align="center">
            <context>2</context>
            <area>0,10,800,50</area>
            <font>title</font>
            <value>Select Associated Channel</value>
        </textarea>

        <!--
            archived file channel 
        -->

        <image name="image" draworder="0">
            <context>2</context>
            <position>25,60</position>
            <filename>trans-cr-background.png</filename>
            <staticsize>750,170</staticsize>
        </image>

        <textarea name="progtitle" draworder="3">
            <context>2</context>
            <area>40,70,440,30</area>
            <font>detailtitle</font>
            <value></value>
            <multiline>no</multiline>
        </textarea>

        <textarea name="progdatetime" draworder="4" align="right">
            <context>2</context>
            <area>590,70,165,30</area>
            <font>detailtitle</font>
            <value></value>
            <multiline>no</multiline>
        </textarea>

        <textarea name="progdescription" draworder="5">
            <context>2</context>
            <area>40,100,720,100</area>
            <font>detail</font>
            <value></value>
            <multiline>yes</multiline>
        </textarea>

        <image name="preview_image" draworder="0">
            <context>2</context>
            <position>615,70</position>
            <staticsize>130,100</staticsize>
            <filename>blank.png</filename>
        </image>

        <image name="image" draworder="0">
            <context>2</context>
            <position>25,225</position>
            <filename>trans-cr-background.png</filename>
            <staticsize>750,160</staticsize>
        </image>

        <textarea name="label" draworder="2" align="center">
            <context>2</context>
            <area>50,230,690,50</area>
            <font>label</font>
            <value>Archived Channel</value>
        </textarea>

        <textarea name="label" draworder="1" align="left">
            <context>2</context>
            <area>50,280,500,50</area>
            <font>label</font>
            <value>Chan. ID:</value>
        </textarea>

        <textarea name="chanid" draworder="1" align="left">
            <context>2</context>
            <area>190,285,500,50</area>
            <font>detail</font>
            <value></value>
        </textarea>

        <textarea name="label" draworder="1" align="left">
            <context>2</context>
            <area>50,320,500,50</area>
            <font>label</font>
            <value>Chan. No:</value>
        </textarea>

        <textarea name="channo" draworder="1" align="left">
            <context>2</context>
            <area>190,325,500,50</area>
            <font>detail</font>
            <value></value>
        </textarea>

        <textarea name="label" draworder="1" align="left">
            <context>2</context>
            <area>350,280,500,50</area>
            <font>label</font>
            <value>Callsign:</value>
        </textarea>

        <textarea name="callsign" draworder="1" align="left">
            <context>2</context>
            <area>480,285,500,50</area>
            <font>detail</font>
            <value></value>
        </textarea>

        <textarea name="label" draworder="1" align="left">
            <context>2</context>
            <area>350,320,500,50</area>
            <font>label</font>
            <value>Name:</value>
        </textarea>

        <textarea name="name" draworder="1" align="left">
            <context>2</context>
            <area>480,325,500,50</area>
            <font>detail</font>
            <value></value>
        </textarea>

        <!--
            local file channel 
         -->

        <image name="image" draworder="0">
            <context>2</context>
            <position>25,380</position>
            <filename>trans-cr-background.png</filename>
            <staticsize>750,170</staticsize>
        </image>

        <textarea name="label" draworder="2" align="center">
            <context>2</context>
            <area>50,385,690,50</area>
            <font>label</font>
            <value>Local Channel</value>
        </textarea>

        <textarea name="label" draworder="1" align="left">
            <context>2</context>
            <area>50,440,500,50</area>
            <font>label</font>
            <value>Chan. ID:</value>
        </textarea>

        <textarea name="local_chanid" draworder="1" align="left">
            <context>2</context>
            <area>190,444,500,50</area>
            <font>detail</font>
            <value></value>
        </textarea>

        <pushbutton name="searchchanid_button" draworder="2">
            <context>2</context>
            <position>300,440</position>
            <image function="on" filename="blankbutton_on.png"></image>
            <image function="off" filename="blankbutton_off.png"></image>
            <image function="pushed" filename="blankbutton_pushed.png"></image>
        </pushbutton>

        <textarea name="label" draworder="1" align="left">
            <context>2</context>
            <area>50,480,500,50</area>
            <font>label</font>
            <value>Chan. No:</value>
        </textarea>

        <textarea name="local_channo" draworder="1" align="left">
            <context>2</context>
            <area>190,484,500,50</area>
            <font>detail</font>
            <value></value>
        </textarea>

        <pushbutton name="searchchanno_button" draworder="2">
            <context>2</context>
            <position>300,480</position>
            <image function="on" filename="blankbutton_on.png"></image>
            <image function="off" filename="blankbutton_off.png"></image>
            <image function="pushed" filename="blankbutton_pushed.png"></image>
        </pushbutton>

        <textarea name="label" draworder="1" align="left">
            <context>2</context>
            <area>350,440,500,50</area>
            <font>label</font>
            <value>Callsign:</value>
        </textarea>

        <textarea name="local_callsign" draworder="1" align="left">
            <context>2</context>
            <area>480,445,500,50</area>
            <font>detail</font>
            <value></value>
        </textarea>

        <pushbutton name="searchcallsign_button" draworder="2">
            <context>2</context>
            <position>700,440</position>
            <image function="on" filename="blankbutton_on.png"></image>
            <image function="off" filename="blankbutton_off.png"></image>
            <image function="pushed" filename="blankbutton_pushed.png"></image>
        </pushbutton>

        <textarea name="label" draworder="1" align="left">
            <context>2</context>
            <area>350,480,500,50</area>
            <font>label</font>
            <value>Name:</value>
        </textarea>

        <textarea name="local_name" draworder="1" align="left">
            <context>2</context>
            <area>480,485,500,50</area>
            <font>detail</font>
            <value></value>
        </textarea>

        <pushbutton name="searchname_button" draworder="2">
            <context>2</context>
            <position>700,480</position>
            <image function="on" filename="blankbutton_on.png"></image>
            <image function="off" filename="blankbutton_off.png"></image>
            <image function="pushed" filename="blankbutton_pushed.png"></image>
        </pushbutton>

      </container>


      <!--
          button area shown on all pages
          -->
      <container name="buttons">
          <area>0,550,800,50</area>

          <textbutton name="cancel_button" draworder="1">
              <position>35,0</position>
              <image function="on" filename="text_button_on.png"></image>
              <image function="off" filename="text_button_off.png"></image>
              <image function="pushed" filename="text_button_pushed.png"></image>
              <font>buttons</font>
          </textbutton>

          <textbutton name="prev_button" draworder="1">
              <position>440,0</position>
              <image function="on" filename="text_button_on.png"></image>
              <image function="off" filename="text_button_off.png"></image>
              <image function="pushed" filename="text_button_pushed.png"></image>
              <font>buttons</font>
          </textbutton>

          <textbutton name="next_button" draworder="1">
              <position>610,0</position>
              <image function="on" filename="text_button_on.png"></image>
              <image function="off" filename="text_button_off.png"></image>
              <image function="pushed" filename="text_button_pushed.png"></image>
              <font>buttons</font>
          </textbutton>
      </container>
  </window>

</mythuitheme>
