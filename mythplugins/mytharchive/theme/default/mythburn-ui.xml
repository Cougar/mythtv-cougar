<!--

MythArchive GUI theme

-->
<mythuitheme>

    <window name="profilepopup">
        <area>193,87,413,426</area>

        <imagetype name="box">
            <filename>mz_function_popup.png</filename>
        </imagetype>

        <textarea name="title" from="basetextarea">
            <area>20,20,360,40</area>
            <font>basemedium</font>
            <align>hcenter,top</align>
            <value>Change Encoding Profile</value>
        </textarea>

        <textarea name="caption_text" from="basetextarea">
            <area>20,70,360,30</area>
            <align>hcenter,top</align>
        </textarea>

        <buttonlist name="profile_list" from="baseselector">
            <position>90,130</position>
        </buttonlist>

        <textarea name="description_text" from="basetextarea">
            <area>25,180,350,90</area>
            <align>allcenter</align>
            <font>basesmallgrey</font>
            <multiline>yes</multiline>
            <value></value>
        </textarea>

       <textarea name="oldsize_text" from="basetextarea">
            <area>30,300,200,60</area>
            <font>basesmallpurple</font>
            <align>left</align>
            <value>12.34GB</value>
        </textarea>

       <textarea name="newsize_text" from="basetextarea">
            <area>170,300,200,60</area>
            <font>basesmallpurple</font>
            <align>right</align>
            <value>12.34GB</value>
        </textarea>

        <button name="ok_button" from="basebutton">
            <position>125,350</position>
        </button>
    </window>

    <window name="themeselector">

        <font name="title" from="basesmall">
            <color>#ffff00</color>
            <dropcolor>#000000</dropcolor>
            <size>24</size>
            <shadow>3,3</shadow>
            <bold>yes</bold>
        </font>

        <!--
         theme selector
        -->
        <textarea name="title" from="basetextarea">
            <area>0,10,800,50</area>
            <font>title</font>
            <align>allcenter</align>
            <value>DVD Menu Theme</value>
        </textarea>

        <imagetype name="topbgimage">
            <area>25,80,750,150</area>
            <filename>trans-cr-background.png</filename>
        </imagetype>

        <textarea name="themetitle" from="basetextarea">
            <area>45,95,500,50</area>
            <font>basesmallyellow</font>
            <value>Select a theme</value>
        </textarea>

        <buttonlist name="theme_selector" from="basewideselector">
            <position>45,160</position>
        </buttonlist>

        <imagetype name="theme_image" >
            <area>620,95,125,105</area>
        </imagetype>

        <!--
            theme preview images
        -->

        <imagetype name="middlebgimage">
            <area>25,220,750,210</area>
            <filename>trans-cr-background.png</filename>
        </imagetype>

        <imagetype name="intro_image">
            <area>52,235,165,132</area>
        </imagetype>

        <textarea name="introtitle" from="basetextarea">
            <area>80,365,105,40</area>
            <align>center</align>
            <value>Intro</value>
        </textarea>

        <imagetype name="mainmenu_image">
            <area>227,235,165,132</area>
        </imagetype>

        <textarea name="menutitle" from="introtitle">
            <area>255,365,105,40</area>
            <value>Main Menu</value>
        </textarea>

        <imagetype name="chapter_image">
            <area>402,235,165,132</area>
        </imagetype>

        <textarea name="chaptertitle" from="introtitle">
            <area>410,365,145,40</area>
            <value>Chapter Menu</value>
        </textarea>

        <imagetype name="details_image">
            <area>577,235,165,132</area>
        </imagetype>

        <textarea name="detailtitle" from="introtitle">
            <area>605,365,105,40</area>
            <value>Details</value>
        </textarea>

        <!--
            theme description
        -->

        <imagetype name="bottombgimage">
            <area>25,420,750,120</area>
            <filename>trans-cr-background.png</filename>
        </imagetype>

        <textarea name="themedescription" from="basetextarea">
            <area>45,435,710,90</area>
            <value>description goes here.</value>
            <multiline>yes</multiline>
        </textarea>

        <button name="cancel_button" from="basebutton">
            <position>35,550</position>
        </button>

        <button name="prev_button" from="basebutton">
            <position>440,550</position>
        </button>

        <button name="next_button" from="basebutton">
            <position>610,550</position>
        </button>

    </window>

    <!--
        ******************************************************************
        The main mythburn screen
        *******************************************************************
    -->

    <window name="mythburn">

        <font name="title" from="basesmall">
            <color>#ffff00</color>
            <dropcolor>#000000</dropcolor>
            <size>24</size>
            <shadow>3,3</shadow>
            <bold>yes</bold>
        </font>

        <font name="smallstatsfont" from="basesmall">
            <color>#ffffff</color>
            <size>10</size>
        </font>

        <font name="statserror" from="basesmall">
            <color>#ff0000</color>
            <size>10</size>
        </font>

        <imagetype name="topbgimage">
            <area>25,50,750,480</area>
            <filename>trans-cr-background.png</filename>
        </imagetype>

        <textarea name="title" from="basetextarea">
            <area>0,10,800,50</area>
            <font>title</font>
            <align>center</align>
            <value>Select Archive Items</value>
        </textarea>

        <buttonlist name="archivelist">
            <area>50,70,695,310</area>
            <layout>vertical</layout>
            <spacing>5</spacing>
            <buttonarea>0,0,700,310</buttonarea>
            <statetype name="buttonitem">
                <area>0,0,700,100</area>
                <state name="active">
                    <imagetype name="buttonbackground">
                        <area>0,0,690,100</area>
                        <gradient start="#505050" end="#000000" alpha="200" />
                    </imagetype>
                    <textarea name="buttontext" from="basetextarea">
                        <area>10,10,470,30</area>
                        <font>basemedium</font>
                    </textarea>
                    <textarea name="subtitle" from="basetextarea">
                        <area>10,40,300,30</area>
                        <font>basesmallpurple</font>
                    </textarea>
                    <textarea name="date" from="basetextarea">
                        <area>10,70,285,30</area>
                    </textarea>
                    <textarea name="size" from="basetextarea">
                        <area>485,10,185,30</area>
                        <align>right</align>
                    </textarea>
                    <textarea name="cutlist" from="size">
                        <area>385,40,285,30</area>
                    </textarea>
                    <textarea name="profile" from="size">
                        <area>385,70,285,30</area>
                    </textarea>

                </state>
                <state name="selected" from="active">
                    <imagetype name="buttonbackground">
                        <gradient start="#52CA38" end="#349838" alpha="255" />
                    </imagetype>

                    <textarea name="buttontext">
                        <font>basemedium</font>
                    </textarea>
                </state>
               <state name="inactive" from="active">
                    <imagetype name="buttonbackground">
                        <gradient start="#52CA38" end="#349838" alpha="100" />
                    </imagetype>

                    <textarea name="buttontext">
                        <font>basemedium</font>
                    </textarea>
                </state>
            </statetype>
            <statetype name="upscrollarrow">
                <position>240,270</position>
                <state type="on">
                    <imagetype name="upon">
                        <filename>up_arrow.png</filename>
                    </imagetype>
                </state>
            </statetype>
            <statetype name="downscrollarrow">
                <position>456,270</position>
                <state type="on">
                    <imagetype name="dnon">
                        <filename>down_arrow.png</filename>
                    </imagetype>
                </state>
            </statetype>
        </buttonlist>

        <textarea name="nofiles" from="basetextarea">
            <area>50,70,695,175</area>
            <align>allcenter</align>
            <value>No files are selected for archive</value>
        </textarea>

        <button name="addrecording_button" from="basebutton">
            <position>50,410</position>
        </button>

        <button name="addvideo_button" from="basebutton">
            <position>320,410</position>
        </button>

        <button name="addfile_button" from="basebutton">
            <position>590,410</position>
        </button>

        <progressbar name="size_bar" from="baseprogressbar">
            <position>120,500</position>
        </progressbar>

        <textarea name="maxsize" from="basetextarea">
            <area>546,480,100,30</area>
            <font>smallstatsfont</font>
            <align>right</align>
            <value>xxxxx mb</value>
        </textarea>

        <textarea name="minsize" from="basetextarea">
            <area>130,480,100,30</area>
            <font>smallstatsfont</font>
            <value>0 mb</value>
        </textarea>

        <textarea name="currentsize" from="basetextarea">
            <area>120,480,536,30</area>
            <font>smallstatsfont</font>
            <align>hcenter</align>
            <value>xxxxx mb</value>
        </textarea>

        <textarea name="currentsize_error" from="currentsize">
            <font>statserror</font>
        </textarea>

        <button name="cancel_button" from="basebutton">
            <position>35,550</position>
        </button>

        <button name="prev_button" from="basebutton">
            <position>440,550</position>
        </button>

        <button name="next_button" from="basebutton">
            <position>610,550</position>
        </button>

    </window>

  <!--
      *******************************************************************
      The editmetadata dialog
      *******************************************************************
  -->

  <window name="edit_metadata">

      <font name="title" face="Arial">
          <color>#ffff00</color>
          <dropcolor>#000000</dropcolor>
          <size>24</size>
          <shadow>3,3</shadow>
          <bold>yes</bold>
      </font>

      <font name="labels" face="Arial">
          <color>#ffff00</color>
          <dropcolor>#000000</dropcolor>
          <size>18</size>
          <shadow>3,3</shadow>
          <bold>yes</bold>
      </font>

      <font name="display" face="Arial">
          <color>#ffffff</color>
          <dropcolor>#000000</dropcolor>
          <size>18</size>
          <shadow>3,3</shadow>
          <bold>yes</bold>
      </font>

      <container name="edit_container">
          <area>0,0,800,600</area>

          <textarea name="title" draworder="1" align="center">
              <area>0,15,800,50</area>
              <font>title</font>
              <value>Archive Item Details</value>
          </textarea>

          <!--
              Labels
          -->

          <textarea name="title_label" draworder="1" align="right">
              <area>15,70,170,30</area>
              <font>labels</font>
              <value>Title:</value>
          </textarea>

          <textarea name="subtitle_label" draworder="1" align="right">
              <area>15,110,170,30</area>
              <font>labels</font>
              <value>Subtitle:</value>
          </textarea>

          <textarea name="startdate_label" draworder="1" align="right">
              <area>15,150,170,30</area>
              <font>labels</font>
              <value>Start Date:</value>
          </textarea>

          <textarea name="starttime_label" draworder="1" align="right">
              <area>430,150,100,30</area>
              <font>labels</font>
              <value>Time:</value>
          </textarea>

          <textarea name="description_label" draworder="1" align="right">
              <area>15,190,170,30</area>
              <font>labels</font>
              <value>Description:</value>
          </textarea>

          <!--
              edits
          -->

          <remoteedit name="title_edit" draworder="1" align="left">
              <area>195,70,525,35</area>
              <font>display</font>
          </remoteedit>
          <remoteedit name="subtitle_edit" draworder="1" align="left">
              <area>195,110,525,35</area>
              <font>display</font>
          </remoteedit>
          <remoteedit name="startdate_edit" draworder="1" align="left">
              <area>195,150,250,35</area>
              <font>display</font>
          </remoteedit>
          <remoteedit name="starttime_edit" draworder="1" align="left">
              <area>540,150,180,35</area>
              <font>display</font>
          </remoteedit>
          <remoteedit name="description_edit" draworder="1" align="left">
              <area>195,190,525,300</area>
              <font>display</font>
          </remoteedit>

          <!--
              Push buttons
          -->
          <textbutton name="ok_button" draworder="0">
              <position>250,540</position>
              <font>display</font>
              <image function="on" filename="text_button_on.png"></image>
              <image function="off" filename="text_button_off.png"></image>
              <image function="pushed" filename="text_button_pushed.png"></image>
          </textbutton>
          <textbutton name="cancel_button" draworder="0">
              <position>450,540</position>
              <font>display</font>
              <image function="on" filename="text_button_on.png"></image>
              <image function="off" filename="text_button_off.png"></image>
              <image function="pushed" filename="text_button_pushed.png"></image>
          </textbutton>

      </container>
  </window>

  <window name="thumbfinder">

      <font name="title" face="Arial">
          <color>#ffff00</color>
          <dropcolor>#000000</dropcolor>
          <size>24</size>
          <shadow>3,3</shadow>
          <bold>yes</bold>
      </font>

      <font name="display" face="Arial">
          <color>#ffffff</color>
          <dropcolor>#000000</dropcolor>
          <size>18</size>
          <shadow>3,3</shadow>
          <bold>yes</bold>
      </font>

      <font name="subtitle_active" face="Arial">
          <color>#ffffff</color>
          <size>14</size>
          <bold>no</bold>
      </font>

      <font name="subtitle_inactive" face="Arial">
          <color>#9999cc</color>
          <size>14</size>
          <bold>no</bold>
      </font>

      <font name="subtitle_selected" face="Arial">
          <color>#ff0000</color>
          <size>14</size>
          <bold>no</bold>
      </font>

      <font name="label" face="Arial">
          <color>#ffff00</color>
          <dropcolor>#000000</dropcolor>
          <size>14</size>
          <shadow>3,3</shadow>
          <bold>yes</bold>
      </font>

      <container name="title">

          <area>0,5,800,45</area>
          <textarea name="title" draworder="0" align="center">
              <area>0,0,800,45</area>
              <font>title</font>
              <multiline>no</multiline>
              <value>Thumb Image Selector</value>
          </textarea>

      </container>

      <container name="video">

          <area>20,60,760,250</area>
          <textbutton name="frame_button" draworder="1">
              <position>2,0</position>
              <font>display</font>
              <image function="on" filename="ma_frame_button_on.png"></image>
              <image function="off" filename="ma_frame_button_off.png"></image>
              <image function="pushed" filename="ma_frame_button_on.png"></image>
          </textbutton>

            <image name="frameimage" draworder="2">
                <position>7,5</position>
                <staticsize>360,229</staticsize>
                <filename>ma_black.png</filename>
            </image>

            <image name="image" draworder="0">
                <position>400,0</position>
                <filename>trans-cr-background.png</filename>
                <staticsize>365,80</staticsize>
            </image>

            <textarea name="label" draworder="3" align="center">
                <area>400,10,365,20</area>
                <font>label</font>
                <value>Current Position</value>
            </textarea>

            <textarea name="currentpos" draworder="3" align="center">
                <area>400,30,365,40</area>
                <font>display</font>
                <value>0:00:00.00</value>
            </textarea>

            <image name="image" draworder="0">
                <position>400,120</position>
                <filename>trans-cr-background.png</filename>
                <staticsize>365,80</staticsize>
            </image>

            <textarea name="label" draworder="3" align="center">
                <area>400,130,365,20</area>
                <font>label</font>
                <value>Seek Amount</value>
            </textarea>

            <textarea name="seekamount" draworder="3" align="center">
                <area>400,150,365,40</area>
                <font>display</font>
                <value>Frame</value>
            </textarea>

            <image name="positionimage" draworder="3">
                <position>400,90</position>
                <filename>trans-cr-background.png</filename>
                <staticsize>365,20</staticsize>
            </image>

            <!--
                Push buttons
                -->
            <textbutton name="cancel_button" draworder="1">
                <position>405,200</position>
                <font>display</font>
                <image function="on" filename="text_button_on.png"></image>
                <image function="off" filename="text_button_off.png"></image>
                <image function="pushed" filename="text_button_pushed.png"></image>
            </textbutton>
            <textbutton name="save_button" draworder="1">
                <position>605,200</position>
                <font>display</font>
                <image function="on" filename="text_button_on.png"></image>
                <image function="off" filename="text_button_off.png"></image>
                <image function="pushed" filename="text_button_pushed.png"></image>
            </textbutton>

      </container>

      <container name="list_area">
            <area>20,330,760,250</area>

            <imagegrid name="imagegrid" draworder="0">
                <area>0,0,760,250</area>
                <textposition>bottom</textposition>
                <textheight>30</textheight>
                <columncount>5</columncount>
                <rowcount>2</rowcount>
                <cutdown>yes</cutdown>
                <showchecks>no</showchecks>
                <showselected>no</showselected>
                <showscrollarrows>no</showscrollarrows>
                <align>allcenter</align>
                <padding>10</padding>
                <multiline>no</multiline>
                <activefont>subtitle_active</activefont>
                <inactivefont>subtitle_inactive</inactivefont>
                <selectedfont>subtitle_selected</selectedfont>
                <image function="normal" filename="ma_browser_back_reg.png"></image>
                <image function="highlighted" filename="ma_browser_back_sel.png"></image>
                <image function="selected" filename="ma_browser_back_sel.png"></image>
                <image function="default" filename="ma_nothumb.png"></image>
            </imagegrid>
      </container>
   </window>
</mythuitheme>
