<!--

MythTV Archive GUI theme

-->
<mythuitheme>

  <!-- 
      Recording Selector
  -->
  <window name="recording_selector">

      <font name="title" face="Arial">
          <color>#ffff00</color>
          <dropcolor>#000000</dropcolor>
          <size>24</size>
          <shadow>3,3</shadow>
          <bold>yes</bold>
      </font>

      <font name="description" face="Arial">
          <color>#ffffff</color>
          <size>18</size>
          <bold>no</bold>
      </font>

      <font name="detail" face="Arial">
          <color>#ffffff</color>
          <size>14</size>
          <bold>no</bold>
      </font>

      <font name="detailtitle" face="Arial">
          <color>#ffff00</color>
          <size>14</size>
          <bold>no</bold>
      </font>

      <font name="label" face="Arial">
          <color>#ffff00</color>
          <size>16</size>
          <bold>yes</bold>
      </font>

      <font name="buttons" face="Arial">
          <color>#ffffff</color>
          <size>12</size>
          <bold>yes</bold>
      </font>

      <font name="active" face="Arial">
          <color>#ffffff</color>
          <size>18</size>
          <bold>yes</bold>
      </font>

      <font name="inactive" face="Arial">
          <color>#9999cc</color>
          <size>18</size>
          <bold>yes</bold>
      </font>

      <font name="smallstatsfont" face="Arial">
          <color>#ffffff</color>
          <size>10</size>
          <bold>no</bold>
      </font>

      <font name="statserror" face="Arial">
          <color>#ff0000</color>
          <size>10</size>
          <bold>no</bold>
      </font>

      <container name="recordinglist">
          <area>0,0,800,550</area>

          <image name="image" draworder="0">
              <position>25,60</position>
              <filename>trans-cr-background.png</filename>
              <staticsize>750,290</staticsize>
          </image>

          <textarea name="title" draworder="1" align="center">
              <area>0,10,800,50</area>
              <font>title</font>
              <value>Select Recordings</value>
          </textarea>

          <textarea name="title" draworder="1" align="right">
              <area>45,85,200,50</area>
              <font>label</font>
              <value>Show Recordings</value>
          </textarea>

          <selector name="category_selector" draworder="1">
              <area>265,80,480,40</area>
              <font>description</font>
              <image function="on" filename="leftright_on.png"></image>
              <image function="off" filename="leftright_off.png"></image>
              <image function="pushed" filename="leftright_pushed.png"></image>
          </selector>

          <listbtnarea name="recordinglist"  draworder="1">
              <area>50,130,680,175</area>
              <gradient type="unselected" start="#505050" end="#000000" alpha="100">
              </gradient>
              <gradient type="selected" start="#52ca38" end="#349838" alpha="255">
              </gradient>
              <fcnfont name="active" function="active"></fcnfont>
              <fcnfont name="inactive" function="inactive"></fcnfont>
              <showscrollarrows>yes</showscrollarrows>
              <showarrow>no</showarrow>
          </listbtnarea>

          <image name="image" draworder="0">
              <position>25,310</position>
              <filename>trans-cr-background.png</filename>
              <staticsize>750,260</staticsize>
          </image>

          <textarea name="progtitle" draworder="3">
              <area>40,320,440,30</area>
              <font>detailtitle</font>
              <value>title goes here</value>
              <multiline>no</multiline>
          </textarea>

          <textarea name="progdatetime" draworder="4" align="right">
              <area>590,320,165,30</area>
              <font>detailtitle</font>
              <value>sep 13, 2004 11:00 pm (1h 15m)</value>
              <multiline>no</multiline>
          </textarea>

          <textarea name="progdescription" draworder="5">
              <area>40,350,570,150</area>
              <font>detail</font>
              <value>description goes here.</value>
              <multiline>yes</multiline>
          </textarea>

          <image name="cutlist_image" draworder="5">
              <position>45,505</position>
              <staticsize>25,25</staticsize>
              <filename>ma_cutlist.png</filename>
          </image>

          <textarea name="filesize" draworder="5" align="right">
              <area>650,505,100,40</area>
              <font>detail</font>
              <value>x.xx Gb</value>
              <multiline>yes</multiline>
          </textarea>

          <image name="preview_image" draworder="0">
              <position>615,370</position>
              <staticsize>130,100</staticsize>
              <filename>blank.png</filename>
          </image>

      </container> 

      <!--
          button area
      -->
      <container name="buttons">
          <area>0,550,800,50</area>

          <textbutton name="cancel_button" draworder="1">
              <position>35,0</position>
              <image function="on" filename="text_button_on.png"></image>
              <image function="off" filename="text_button_off.png"></image>
              <image function="pushed" filename="text_button_pushed.png"></image>
              <font>buttons</font>
          </textbutton>

          <textbutton name="ok_button" draworder="1">
              <position>610,0</position>
              <image function="on" filename="text_button_on.png"></image>
              <image function="off" filename="text_button_off.png"></image>
              <image function="pushed" filename="text_button_pushed.png"></image>
              <font>buttons</font>
          </textbutton>

      </container>
  </window>

