<mythuitheme>

  <window name="news">

    <font name="active" face="FreeSans">
      <color>#ffffff</color>
      <size>13</size>
      <bold>yes</bold>
    </font>

    <font name="inactive" face="FreeSans">
      <color>#9999cc</color>
      <size>13</size>
      <bold>yes</bold>
    </font>

    <font name="header" face="FreeSans">
      <color>#ffffff</color>
      <size>28</size>
      <bold>yes</bold>
      <shadow>1,1</shadow>
    </font>

    <font name="title" face="FreeSans">
      <color>#ffff00</color>
      <dropcolor>#000000</dropcolor>
      <size>16</size>
      <shadow>1,1</shadow>
      <bold>yes</bold>
    </font>

    <font name="desc" face="FreeSans">
      <color>#ffffff</color>
      <size>13</size>
      <shadow>1,1</shadow>
      <bold>yes</bold>
    </font>

    <font name="info" face="FreeSans">
      <color>#ffffff</color>
      <dropcolor>#000000</dropcolor>
      <size>13</size>
      <shadow>1,1</shadow>
      <bold>yes</bold>
    </font>

    <container name="background">
      <image name="bg" draworder="0" fleximage="no">
        <filename>news-bg.png</filename>
        <position>0,0</position>
      </image>
    </container>

    <container name="selector">
      <area>17,177,775,365</area>

      <listarea name="sites" draworder="2">
        <area>10,25,255,335</area>
        <fcnfont name="active" function="active"></fcnfont>
        <fcnfont name="active" function="selected"></fcnfont>
        <fcnfont name="inactive" function="inactive"></fcnfont>
        <column number="1" width="255" context="-1"></column>
        <items>9</items>
        <image function="selectionbar" filename="news-sel1.png" location="-2,-5"></image>
      </listarea>

      <listarea name="info" draworder="2">
        <area>280,25,475,335</area>
        <fcnfont name="active" function="active"></fcnfont>
        <fcnfont name="active" function="selected"></fcnfont>
        <fcnfont name="inactive" function="inactive"></fcnfont>
        <column number="1" width="475" context="-1"></column>
        <items>9</items>
        <image function="selectionbar" filename="news-sel2.png" location="-2,-5"></image>
      </listarea>

      <image name="lines" draworder="5" fleximage="no">
        <filename>news-mid-lines.png</filename>
        <position>3,3</position>
      </image>
    </container>


    <container name="news_info">
      <area>17,17,775,155</area>

      <textarea name="title" draworder="6">
        <area>15,15,610,50</area>
        <font>title</font>
        <multiline>yes</multiline>
      </textarea>

      <textarea name="description" draworder="6">
        <area>16,55,610,85</area>
        <font>desc</font>
        <multiline>yes</multiline>
      </textarea>

      <textarea name="updated" draworder="6">
        <area>650,30,200,100</area>
        <font>active</font>
        <multiline>yes</multiline>
      </textarea>

      <image name="lines" draworder="5" fleximage="no">
        <filename>news-top-lines.png</filename>
        <position>3,3</position>
      </image>
    </container>

    <container name="messages">
      <area>17,547,775,55</area>
      <textarea name="loading" draworder="2"> 
        <font>active</font>
        <area>15,15,100,50</area>
      </textarea>
      <textarea name="retrieved" draworder="3" align="right">
        <font>active</font>
        <area>120,15,600,50</area>
      </textarea>
      <image name="lines" draworder="5" fleximage="no">
        <filename>news-bot-lines.png</filename>
        <position>3,3</position>
      </image>
    </container>


  </window>
 
</mythuitheme>
