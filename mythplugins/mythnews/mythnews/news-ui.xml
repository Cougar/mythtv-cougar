<mythuitheme>

  <window name="news">

    <font name="active" face="Arial Narrow">
      <color>#ffffff</color>
      <size>18</size>
      <bold>yes</bold>
    </font>

    <font name="inactive" face="Arial Narrow">
      <color>#9999cc</color>
      <size>18</size>
      <bold>yes</bold>
    </font>

    <font name="title" face="Arial Narrow">
      <color>#ffff00</color>
      <dropcolor>#000000</dropcolor>
      <size>20</size>
      <shadow>1,1</shadow>
      <bold>yes</bold>
    </font>

    <font name="desc" face="Arial Narrow">
      <color>#ffffff</color>
      <size>19</size>
      <bold>no</bold>
    </font>

    <font name="updated" face="Arial Narrow">
      <color>#ffffff</color>
      <dropcolor>#000000</dropcolor>
      <size>16</size>
      <bold>no</bold>
    </font>

    <container name="sites">

      <area>20,20,220,320</area>

      <listbtnarea name="siteslist" draworder="0">
        <area>0,0,200,300</area>
        <gradient type="unselected" start="#505050" end="#000000" alpha="100">
        </gradient>
        <gradient type="selected" start="#52CA38" end="#349838" alpha="255">
        </gradient>
        <fcnfont name="active" function="active"></fcnfont>
        <fcnfont name="inactive" function="inactive"></fcnfont>
        <showscrollarrows>yes</showscrollarrows>
      </listbtnarea>

    </container>

    <container name="articles"> 

      <area>250,20,780,320</area>

      <listbtnarea name="articleslist"  draworder="0">
        <area>0,0,530,300</area>
        <gradient type="unselected" start="#505050" end="#000000" alpha="100">
        </gradient>
        <gradient type="selected" start="#52CA38" end="#349838" alpha="255">
        </gradient>
        <fcnfont name="active" function="active"></fcnfont>
        <fcnfont name="inactive" function="inactive"></fcnfont>
        <showscrollarrows>yes</showscrollarrows>
        <showarrow>no</showarrow>
      </listbtnarea>

    </container>

    <container name="info"> 

      <area>0,400,800,200</area>

      <image name="background" draworder="0" fleximage="no">
        <filename>news-info-bg.png</filename>
        <position>0,0</position>
      </image>

      <textarea name="title" draworder="1">
        <area>20,10,650,60</area>
        <font>title</font>
        <multiline>yes</multiline>
      </textarea>

      <textarea name="description" draworder="1">
        <area>20,75,650,100</area>
        <font>desc</font>
        <multiline>yes</multiline>
      </textarea>

      <textarea name="updated" align="right" draworder="1">
        <area>660,30,120,100</area>
        <font>updated</font>
        <multiline>yes</multiline>
      </textarea>

    </container>

    <container name="config-selector">

      <area>20,200,250,100</area>

      <listbtnarea name="selector" draworder="0">
        <area>0,0,250,100</area>
        <gradient type="unselected" start="#847303" end="#684b02" alpha="150">
        </gradient>
        <gradient type="selected" start="#f9dd07" end="#efb700" alpha="255">
        </gradient>
        <fcnfont name="active" function="active"></fcnfont>
        <fcnfont name="inactive" function="inactive"></fcnfont>
        <showscrollarrows>no</showscrollarrows>
      </listbtnarea>

    </container>

    <container name="config-sites">

      <area>300,90,480,300</area>

      <listbtnarea name="category" draworder="0">
        <area>0,0,200,300</area>
        <gradient type="unselected" start="#000000" end="#505050" alpha="100">
        </gradient>
        <gradient type="selected" start="#52CA38" end="#349838" alpha="255">
        </gradient>
        <fcnfont name="active" function="active"></fcnfont>
        <fcnfont name="inactive" function="inactive"></fcnfont>
        <showscrollarrows>yes</showscrollarrows>
      </listbtnarea>

      <listbtnarea name="sites"  draworder="0">
        <area>220,0,260,300</area>
        <gradient type="unselected" start="#000000" end="#505050" alpha="100">
        </gradient>
        <gradient type="selected" start="#52CA38" end="#349838" alpha="255">
        </gradient>
        <fcnfont name="active" function="active"></fcnfont>
        <fcnfont name="inactive" function="inactive"></fcnfont>
        <showarrow>no</showarrow>
        <showscrollarrows>yes</showscrollarrows>
      </listbtnarea>

    </container>

    <container name="config-freq">

      <area>300,90,480,300</area>

         <textarea name="help" draworder="0">
          <area>50,50,400,70</area>
          <font>title</font>
          <multiline>yes</multiline>
         </textarea>

         <blackhole name="spinbox_holder" draworder="0">
            <area>100,130,70,30</area>
         </blackhole>

         <textarea name="minutes" draworder="0">
          <area>175,135,100,30</area>
          <font>active</font>
          <value>Minutes</value>
         </textarea>

    </container>

    <container name="config-bottom">

      <area>0,400,800,200</area>

      <image name="background" draworder="0" fleximage="no">
        <filename>news-info-bg.png</filename>
        <position>0,0</position>
      </image>

    </container>

  </window>
 
</mythuitheme>
