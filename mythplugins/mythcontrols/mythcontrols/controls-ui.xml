<?xml version="1.0" encoding="utf-8"?>
<mythuitheme>

    <window name="controls">

        <font name="active" face="Bitstream Vera Sans">
            <color>#ffffff</color>
            <size>14</size>
            <bold>yes</bold>
        </font>

        <font name="inactive" face="Bitstream Vera Sans">
            <color>#9999cc</color>
            <size>14</size>
            <bold>yes</bold>
        </font>

        <font name="keys" face="Bitstream Vera Sans">
            <color>#000000</color>
            <size>18</size>
            <shadow>1,1</shadow>
            <bold>yes</bold>
        </font>

        <font name="info" face="Bitstream Vera Sans">
            <color>#ffffff</color>
            <size>18</size>
            <shadow>1,1</shadow>
            <bold>yes</bold>
        </font>

        <font name="options" face="Bitstream Vera Sans">
            <color>#ffffff</color>
            <size>24</size>
            <bold>yes</bold>
        </font>

        <font name="infotitle" face="Bitstream Vera Sans">
            <color>#ffffff</color>
            <size>20</size>
            <shadow>10,10</shadow>
            <bold>yes</bold>
        </font>

        <textarea name="leftdesc">
            <font>info</font>
            <area>20,20,370,20</area>
            <value>Contexts</value>
            <align>center</align>
        </textarea>

        <buttonlist name="leftlist" from="basebuttonlist">
            <area>20,50,370,410</area>
            <activefont>active</activefont>
            <inactivefont>inactive</inactivefont>
            <showarrow>no</showarrow>
        </buttonlist>

        <textarea name="rightdesc" from="leftdesc">
            <area>410,20,370,20</area>
            <value>Actions</value>
        </textarea>

        <buttonlist name="rightlist" from="leftlist">
            <area>410,50,370,410</area>
        </buttonlist>

        <button name="action_0" from="basebutton">
            <position>40,450</position>
            <activefont>keys</activefont>
            <inactivefont>keys</inactivefont>
            <regular-background filename="kb-button-off.png" />
            <selected-background filename="kb-button-on.png" />
            <inactive-background filename="kb-button-off.png" />
        </button>

        <button name="action_1" from="action_0">
            <position>220,450</position>
        </button>

        <button name="action_2" from="action_0">
            <position>410,450</position>
        </button>

        <button name="action_3" from="action_0">
            <position>600,450</position>
        </button>

        <textarea name="description">
            <font>info</font>
            <area>30,490,740,110</area>
            <multiline>yes</multiline>
            <align>center</align>
        </textarea>

    </window>
</mythuitheme>
