<?xml version="1.0" encoding="utf-8"?>
<mythuitheme>

 <window name="controls">

  <font name="active" face="Arial">
   <color>#ffffff</color>
   <size>14</size>
   <bold>yes</bold>
  </font>

  <font name="inactive" face="Arial">
   <color>#9999cc</color>
   <size>14</size>
   <bold>yes</bold>
  </font>

  <font name="keys" face="Arial">
   <color>#000000</color>
   <size>18</size>
   <shadow>1,1</shadow>
   <bold>yes</bold>
  </font>

  <font name="info" face="Arial">
   <color>#ffffff</color>
   <size>18</size>
   <shadow>1,1</shadow>
   <bold>yes</bold>
  </font>

  <font name="infotitle" face="Arial">
   <color>#ffffff</color>
   <size>24</size>
   <shadow>10,10</shadow>
   <bold>yes</bold>
  </font>

  <container name="controls">
   <area>20,20,780,380</area>
   <listtreearea name="controltree" draworder="0">
    <area>0,0,760,360</area>
    <listsize>0,0,370,360</listsize>
    <leveloffset>15</leveloffset>
    <gradient type="unselected" start="#505050" end="#000000" alpha="100"/>
    <gradient type="selected" start="#52CA38" end="#349838" alpha="255"/>
    <fcnfont name="active" function="active"/>
    <fcnfont name="inactive" function="inactive"/>
   </listtreearea>
  </container>

  <container name="keys">
   <area>20,400,780,180</area>

   <textbutton name="action_one" draworder="0">
    <position>20,20</position>
    <image function="on" filename="kb-button-on.png"/>
    <image function="off" filename="kb-button-off.png"/>
    <font>keys</font>
   </textbutton>

   <textbutton name="action_two" draworder="0">
    <position>200,20</position>
    <image function="on" filename="kb-button-on.png"/>
    <image function="off" filename="kb-button-off.png"/>
    <font>keys</font>
   </textbutton>

   <textbutton name="action_three" draworder="0">
    <position>390,20</position>
    <image function="on" filename="kb-button-on.png"/>
    <image function="off" filename="kb-button-off.png"/>
    <font>keys</font>
   </textbutton>

   <textbutton name="action_four" draworder="0">
    <position>580,20</position>
    <image function="on" filename="kb-button-on.png"/>
    <image function="off" filename="kb-button-off.png"/>
    <font>keys</font>
   </textbutton>

   <textarea name="description" draworder="1" allign="left">
    <font>info</font>
    <area>30,100,740,140</area>
    <multiline>yes</multiline>
   </textarea>

  </container>

 </window>
</mythuitheme>
