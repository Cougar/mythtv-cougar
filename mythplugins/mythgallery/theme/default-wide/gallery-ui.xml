<?xml version="1.0" encoding="utf-8"?>
<mythuitheme>

    <window name="gallery">
        <imagetype name="background">
            <area>0,0,800,600</area>
            <gradient start="#000000" end="#000000" alpha="255" />
        </imagetype>

        <buttonlist2 name="images">
            <area>25,50,770,560</area>
            <layout>horizontal</layout>
            <spacing>0</spacing>
            <scrollstyle>center</scrollstyle>
            <buttonarea>0,0,770,500</buttonarea>
            <statetype name="buttonitem">
                <state name="active">
                    <imagetype name="buttonimage">
                        <area>0,0,250,300</area>
                        <preserveaspect>yes</preserveaspect>
                        <reflection axis="vertical" shear="24" scale="85" length="35" />
                    </imagetype>
                    <statetype name="buttoncheck">
                        <position>130,100</position>
                        <showempty>yes</showempty>
                        <state type="full">
                            <imagetype name="marked">
                                <filename>gallery-mark.png</filename>
                            </imagetype>
                        </state>
                    </statetype>
                </state>
                <state name="selected" from="active">
                    <imagetype name="buttonimage">
                        <area>-70,20,400,450</area>
                    </imagetype>
                    <textarea name="buttontext" from="basetextarea">
                        <area>-70,480,400,35</area>
                        <font>baselarge</font>
                        <align>hcenter,vcenter</align>
                        <cutdown>yes</cutdown>
                        <multiline>yes</multiline>
                    </textarea>
                </state>
            </statetype>
            <statetype name="upscrollarrow">
                <position>20,470</position>
                <state type="off">
                    <imagetype name="upon">
                        <filename>left_arrow.png</filename>
                    </imagetype>
                </state>
            </statetype>
            <statetype name="downscrollarrow">
                <position>710,470</position>
                <state type="off">
                    <imagetype name="dnon">
                        <filename>right_arrow.png</filename>
                    </imagetype>
                </state>
            </statetype>
        </buttonlist2>

<!--        <textarea name="text" from="basetextarea">
            <area>10,515,780,35</area>
            <font>basemedium</font>
            <align>allcenter</align>
        </textarea>-->

    </window>

</mythuitheme>
