<?xml version="1.0" encoding="utf-8"?>
<mythuitheme>

    <window name="gallery">

        <buttonlist name="images">
            <area>20,20,1260,680</area>
            <layout>grid</layout>
            <spacing>5</spacing>
            <buttonarea>0,0,1240,650</buttonarea>
            <statetype name="buttonitem">
                <area>0,0,150,125</area>
                <state name="active">
                    <imagetype name="buttonbackground">
                        <filename>gallery-back-reg.png</filename>
                    </imagetype>
                    <imagetype name="buttonimage">
                        <area>5,5,140,115</area>
                        <preserveaspect>yes</preserveaspect>
                    </imagetype>
                    <statetype name="buttoncheck">
                        <position>130,100</position>
                        <showempty>yes</showempty>
                        <state type="full">
                            <imagetype name="marked">
                                <filename>gallery-mark.png</filename>
                            </imagetype>
                        </state>
                    </statetype>
                </state>
                <state name="selected" from="active">
                    <imagetype name="buttonbackground">
                        <filename>gallery-back-sel.png</filename>
                    </imagetype>
                    <textarea name="buttontext" from="basetextarea">
                        <area>5,130,140,40</area>
                        <font>basesmall</font>
                        <align>hcenter,vcenter</align>
                        <cutdown>yes</cutdown>
                    </textarea>
                </state>
            </statetype>
            <statetype name="upscrollarrow">
                <position>530,650</position>
                <state type="off">
                    <imagetype name="upon">
                        <filename>up_arrow.png</filename>
                    </imagetype>
                </state>
            </statetype>
            <statetype name="downscrollarrow">
                <position>670,650</position>
                <state type="off">
                    <imagetype name="dnon">
                        <filename>down_arrow.png</filename>
                    </imagetype>
                </state>
            </statetype>
        </buttonlist>

<!--        <textarea name="text" from="basetextarea">
            <area>10,515,780,35</area>
            <font>basemedium</font>
            <align>allcenter</align>
        </textarea>-->

        <!-- optional - shows a message when no images are available
             in the current directory -->
        <textarea name="noimages" from="basetextarea">
            <area>15,20,1250,680</area>
            <font>basemedium</font>
            <align>allcenter</align>
        </textarea>

    </window>

</mythuitheme>
