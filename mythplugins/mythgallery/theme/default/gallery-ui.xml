<?xml version="1.0" encoding="utf-8"?>
<mythuitheme>

    <window name="gallery">

        <buttonlist name="images" from="basebuttonlist">
            <area>15,20,770,550</area>
            <layout>grid</layout>
            <showarrow>no</showarrow>
            <regular-background filename="gallery-back-reg.png" />
            <selected-background filename="gallery-back-sel.png" />
            <inactive-background filename="gallery-back-reg.png" />
            <check-empty filename="gallery-mark-none.png" />
            <check-half filename="gallery-mark-none.png" />
            <check-full filename="gallery-mark.png" />
            <margin>6,6</margin>
            <imagealign>hcenter,vcenter</imagealign>
            <textflags>hcenter,bottom</textflags>
        </buttonlist>

        <textarea name="text" from="basetextarea">
            <area>190,540,580,35</area>
            <font>basemedium</font>
        </textarea>

    </window>

    <window>

        <imagetype name="image">
            <position>0,0</position>
        </imagetype>

        <textarea name="caption" from="basetextarea">
            <area>0,550,800,50</area>
            <font>basemedium</font>
            <align>hcenter,vcenter</align>
        </textarea>

    </window>

</mythuitheme>
