<?xml version="1.0" encoding="utf-8"?>
<mythuitheme>

    <window name="gallery">

        <buttonlist2 name="images">
            <area>15,20,770,560</area>
            <layout>grid</layout>
            <spacing>5</spacing>
            <buttonarea>0,0,770,520</buttonarea>
            <statetype name="buttonitem">
                <area>0,0,150,150</area>
                <state name="active">
                    <imagetype name="buttonbackground">
                        <filename>gallery-back-reg.png</filename>
                    </imagetype>
                    <imagetype name="buttonimage">
                        <area>5,5,140,115</area>
                        <preserveaspect>yes</preserveaspect>
                    </imagetype>
                    <textarea name="buttontext" from="basetextarea">
                        <area>5,130,140,25</area>
                        <font>basesmallgrey</font>
                        <align>hcenter,bottom</align>
                        <value>Test</value>
                    </textarea>
                    <statetype name="buttoncheck">
                        <position>130,100</position>
                        <state type="full">
                            <imagetype name="marked">
                                <filename>gallery-mark.png</filename>
                            </imagetype>
                        </state>
                        <state type="off">
                            <imagetype name="unmarked">
                                <filename>blank.png</filename>
                            </imagetype>
                        </state>
                    </statetype>
                </state>
                <state name="selected" from="active">
                    <imagetype name="buttonbackground">
                        <filename>gallery-back-sel.png</filename>
                    </imagetype>
                    <textarea name="buttontext">
                        <font>basesmall</font>
                    </textarea>
                </state>
            </statetype>
            <statetype name="upscrollarrow">
                <position>240,530</position>
                <state type="off">
                    <imagetype name="upon">
                        <filename>up_arrow.png</filename>
                    </imagetype>
                </state>
            </statetype>
            <statetype name="downscrollarrow">
                <position>456,530</position>
                <state type="off">
                    <imagetype name="dnon">
                        <filename>down_arrow.png</filename>
                    </imagetype>
                </state>
            </statetype>
        </buttonlist2>

        <textarea name="text" from="basetextarea">
            <area>10,515,780,35</area>
            <font>basemedium</font>
            <align>allcenter</align>
        </textarea>

    </window>

    <window>

        <imagetype name="image">
            <position>0,0</position>
        </imagetype>

        <textarea name="caption" from="basetextarea">
            <area>0,550,800,50</area>
            <font>basemedium</font>
            <align>hcenter,vcenter</align>
        </textarea>

    </window>

</mythuitheme>
