<mythuitheme>
 

    <!--
        
        The webcam settings screen

    -->
    <window name="webcam_settings">
    
        <!--

            First, define all the fonts we need on this screen

        -->
        <font name="title" face="Arial">
            <color>#ffffff</color>
            <dropcolor>#000000</dropcolor>
            <size>40</size>
            <shadow>3,3</shadow>
            <bold>yes</bold>
        </font>

        <font name="warning" face="Arial">
            <color>#ffffff</color>
            <dropcolor>#000000</dropcolor>
            <size>24</size>
            <shadow>2,2</shadow>
            <bold>yes</bold>
        </font>
  
        <font name="display" face="Arial">
            <color>#ffffff</color>
            <size>18</size>
            <bold>yes</bold>
        </font>

        <font name="meddisplay" face="Arial">
            <color>#ffffff</color>
            <size>16</size>
            <bold>yes</bold>
        </font>

        <font name="smalldisplay" face="Arial">
            <color>#ffffff</color>
            <size>12</size>
            <bold>yes</bold>
        </font>

        <font name="buttons" face="Arial">
            <color>#ffffff</color>
            <size>14</size>
            <bold>yes</bold>
        </font>

        <container name="background">
            <image name="filler" draworder="0" fleximage="yes">
                <filename>background.png</filename>
                <position>0,10</position>
            </image>
            <image name="mp_webcam_blackhole" draworder="0" fleximage="no">
                <filename>mp_webcam_blackhole.png</filename>
                <position>35,35</position>
            </image>

        </container>

        <container name="webcam_picture">
            <area>40,40,320,240</area>

            <blackhole name="visual_blackhole">
                <area>0,0,320,240</area>
            </blackhole>
        </container>

        <container name="webcam_info">
            <area>20,350,360,250</area>

            <textarea name="webcam_name_text" draworder="1" align="center">
                <font>smalldisplay</font>
                <area>0,10,360,30</area>
            </textarea>

            <textarea name="webcam_colour_bw_text" draworder="1" align="center">
                <font>smalldisplay</font>
                <area>0,40,360,30</area>
            </textarea>

            <textarea name="webcam_maxsize_text" draworder="1" align="center">
                <font>smalldisplay</font>
                <area>0,70,360,30</area>
            </textarea>

            <textarea name="webcam_cursize_text" draworder="1" align="center">
                <font>smalldisplay</font>
                <area>0,100,360,30</area>
            </textarea>

            <textarea name="webcam_fps_text" draworder="1" align="center">
                <font>smalldisplay</font>
                <area>0,130,360,30</area>
            </textarea>

            <textarea name="webcam_brightness_text" draworder="1" align="center">
                <font>smalldisplay</font>
                <area>0,160,360,30</area>
            </textarea>

            <textarea name="webcam_contrast_text" draworder="1" align="center">
                <font>smalldisplay</font>
                <area>0,190,360,30</area>
            </textarea>

            <textarea name="webcam_colour_text" draworder="1" align="center">
                <font>smalldisplay</font>
                <area>0,220,360,30</area>
            </textarea>

            <textarea name="webcam_hue_text" draworder="1" align="center">
                <font>smalldisplay</font>
                <area>0,250,360,30</area>
            </textarea>

        </container>

        <container name="webcam_controls">
            <area>420,20,360,580</area>

            <textarea name="brightness_text" draworder="1" align="center">
                <font>meddisplay</font>
                <area>20,20,300,25</area>
                <value>Brightness</value>
            </textarea>

            <statusbar name="brightness" draworder="1" whitespace="15">
                <container fleximage="no">mp_slider_status_back.png</container>
                <fill>mp_slider_status_fore.png</fill>
                <position>50,45</position>
                <orientation>LeftToRight</orientation>
            </statusbar>

            <pushbutton name="br_down_button" draworder="1">
                <position>4,38</position>
                <image function="on" filename="mp_prev_on.png"></image>
                <image function="off" filename="mp_prev_off.png"></image>
                <image function="pushed" filename="mp_prev_pushed.png"></image>
            </pushbutton>

            <pushbutton name="br_up_button" draworder="1">
                <position>278,38</position>
                <image function="on" filename="mp_next_on.png"></image>
                <image function="off" filename="mp_next_off.png"></image>
                <image function="pushed" filename="mp_next_pushed.png"></image>
            </pushbutton>

            <textarea name="contrast_text" draworder="1" align="center">
                <font>meddisplay</font>
                <area>20,105,300,25</area>
                <value>Contrast</value>
            </textarea>

            <statusbar name="contrast" draworder="1" whitespace="15">
                <container fleximage="no">mp_slider_status_back.png</container>
                <fill>mp_slider_status_fore.png</fill>
                <position>50,130</position>
                <orientation>LeftToRight</orientation>
            </statusbar>

            <pushbutton name="con_down_button" draworder="1">
                <position>4,123</position>
                <image function="on" filename="mp_prev_on.png"></image>
                <image function="off" filename="mp_prev_off.png"></image>
                <image function="pushed" filename="mp_prev_pushed.png"></image>
            </pushbutton>

            <pushbutton name="con_up_button" draworder="1">
                <position>278,123</position>
                <image function="on" filename="mp_next_on.png"></image>
                <image function="off" filename="mp_next_off.png"></image>
                <image function="pushed" filename="mp_next_pushed.png"></image>
            </pushbutton>

            <textarea name="colour_text" draworder="1" align="center">
                <font>meddisplay</font>
                <area>20,190,300,25</area>
                <value>Colour</value>
            </textarea>

            <statusbar name="colour" draworder="1" whitespace="15">
                <container fleximage="no">mp_slider_status_back.png</container>
                <fill>mp_slider_status_fore.png</fill>
                <position>50,215</position>
                <orientation>LeftToRight</orientation>
            </statusbar>

            <pushbutton name="col_down_button" draworder="1">
                <position>4,208</position>
                <image function="on" filename="mp_prev_on.png"></image>
                <image function="off" filename="mp_prev_off.png"></image>
                <image function="pushed" filename="mp_prev_pushed.png"></image>
            </pushbutton>

            <pushbutton name="col_up_button" draworder="1">
                <position>278,208</position>
                <image function="on" filename="mp_next_on.png"></image>
                <image function="off" filename="mp_next_off.png"></image>
                <image function="pushed" filename="mp_next_pushed.png"></image>
            </pushbutton>

            <textarea name="hue_text" draworder="1" align="center">
                <font>meddisplay</font>
                <area>20,275,300,25</area>
                <value>Hue</value>
            </textarea>

            <statusbar name="hue" draworder="1" whitespace="15">
                <container fleximage="no">mp_slider_status_back.png</container>
                <fill>mp_slider_status_fore.png</fill>
                <position>50,300</position>
                <orientation>LeftToRight</orientation>
            </statusbar>

            <pushbutton name="hue_down_button" draworder="1">
                <position>4,293</position>
                <image function="on" filename="mp_prev_on.png"></image>
                <image function="off" filename="mp_prev_off.png"></image>
                <image function="pushed" filename="mp_prev_pushed.png"></image>
            </pushbutton>

            <pushbutton name="hue_up_button" draworder="1">
                <position>278,293</position>
                <image function="on" filename="mp_next_on.png"></image>
                <image function="off" filename="mp_next_off.png"></image>
                <image function="pushed" filename="mp_next_pushed.png"></image>
            </pushbutton>

            <textarea name="fps_text" draworder="1" align="center">
                <font>meddisplay</font>
                <area>20,360,300,25</area>
                <value>Frames / Second</value>
            </textarea>

            <statusbar name="fps" draworder="1" whitespace="15">
                <container fleximage="no">mp_slider_status_back.png</container>
                <fill>mp_slider_status_fore.png</fill>
                <position>50,385</position>
                <orientation>LeftToRight</orientation>
            </statusbar>

            <pushbutton name="fps_down_button" draworder="1">
                <position>4,378</position>
                <image function="on" filename="mp_prev_on.png"></image>
                <image function="off" filename="mp_prev_off.png"></image>
                <image function="pushed" filename="mp_prev_pushed.png"></image>
            </pushbutton>

            <pushbutton name="fps_up_button" draworder="1">
                <position>278,378</position>
                <image function="on" filename="mp_next_on.png"></image>
                <image function="off" filename="mp_next_off.png"></image>
                <image function="pushed" filename="mp_next_pushed.png"></image>
            </pushbutton>

            <textbutton name="save_button" draworder="1">
                <position>120,480</position>
                <image function="on" filename="mp_text_button_on.png"></image>
                <image function="off" filename="mp_text_button_off.png"></image>
                <image function="pushed" filename="mp_text_button_pushed.png"></image>
                <font>buttons</font>
            </textbutton>

        </container>
    </window>
</mythuitheme>
