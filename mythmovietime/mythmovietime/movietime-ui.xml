<mythuitheme>
    <!-- The main MythMovieTime screen -->
    <window name="movietime_main">
    
        <font name="info" face="Arial">
            <color>#ffff99</color>
            <size>16</size>
            <bold>yes</bold>
            <shadow>1,1</shadow>
        </font>
        <font name="infow" face="Arial">
            <color>#ffffff</color>
            <size>16</size>
            <bold>yes</bold>
            <shadow>1,1</shadow>
        </font>
        
        <font name="theater" face="Arial">
            <color>#ffff99</color>
            <size>18</size>
            <bold>yes</bold>
            <shadow>1,1</shadow>
        </font>
        
        <font name="title" face="Arial">
            <color>#ffffBB</color>
            <size>20</size>
            <bold>yes</bold>
            <shadow>2,2</shadow>
        </font>
        
        <font name="description" face="Arial">
            <color>#ffffff</color>
            <size>17</size>
            <bold>yes</bold>
            <shadow>1,1</shadow>
        </font>
        
        <font name="active" face="Arial">
            <color>#ffffff</color>
            <size>18</size>
            <bold>yes</bold>
            <shadow>1,1</shadow>
        </font>

        
        
        <font name="inactive" face="Arial">
            <color>#9999cc</color>
            <size>18</size>
            <bold>yes</bold>
            <shadow>1,1</shadow>
        </font>

        <container name="movietree">
            <area>20,20,780,400</area>

            <listtreearea name="movietree" draworder="0">
                <area>0,0,760,400</area>
                <listsize>0,0,450,360</listsize>
                <leveloffset>10</leveloffset>
                <gradient type="unselected" start="#505050" end="#000000" alpha="100"></gradient>
                <gradient type="selected" start="#52CA38" end="#349838" alpha="255"></gradient>
                <fcnfont name="active" function="active"></fcnfont>          
                <fcnfont name="inactive" function="inactive"></fcnfont>
            </listtreearea>
        </container>

        <container name="info">
            <area>0,400,800,200</area>
            <image name="background" draworder="0" fleximage="no">
                <filename>music-sel-bg.png</filename>
                <position>0,0</position>
            </image>

            
            <textarea name="film_title" draworder="1" align="left">
                <font>title</font>
                <area>10,0,580,35</area>
                <cutdown>yes</cutdown>
            </textarea>
            
            <textarea name="film_description" draworder="1" align="left">
                <font>description</font>
                <area>10,30,780,95</area>
                <multiline>yes</multiline>
                <cutdown>yes</cutdown>
            </textarea>
            
            <textarea name="film_disp_mpaarating" draworder="1" align="right">
                <font>info</font> 
                <area>590,0,200,65</area>
                <cutdown>yes</cutdown>
            </textarea>
            
            <textarea name="ticket_date_time" draworder="1" align="left">
                <font>theater</font>
                <area>10,170,300,30</area>
                <cutdown>yes</cutdown>
            </textarea>
            
            <textarea name="theater_name" draworder="1" align="right">
                <font>theater</font>
                <area>390,140,400,30</area>
                <cutdown>yes</cutdown>
            </textarea>
            
            <!--<textarea name="theater_street" draworder="1" align="left">
                <font>infow</font>
                <area>390,140,400,30</area>
                <cutdown>yes</cutdown>
            </textarea>--> 
            <textarea name="theater_phone" draworder="1" align="right">
                <font>theater</font>
                <area>390,170,400,30</area>
                <cutdown>yes</cutdown>
            </textarea>
            
        </container>
    </window>
</mythuitheme>
