<mythuitheme>
    <window name="mfe_dialog">

        <font name="active" face="Arial">
            <color>#ffffff</color>
            <size>16</size>
            <bold>yes</bold>
        </font>

        <font name="inactive" face="Arial">
            <color>#b6b6b6</color>
            <size>16</size>
            <bold>yes</bold>
        </font>
    
        <font name="now_playing_font" face="Arial">
            <color>#8cc4fc</color>
            <size>24</size>
            <bold>yes</bold>
        </font>

        <font name="current_mfd_font" face="Arial">
            <color>#8cc4fc</color>
            <size>12</size>
        </font>

        <container name="background">
            <area>0,0,800,600</area>
            <image name="mfe_background" draworder="0" fleximage="no">
                <filename>mfe_back.png</filename>
                <position>0,0</position>
            </image>
            <image name="mfe_brushed_bottom" draworder="0" fleximage="no">
                <filename>mfe_brushed_bottom.png</filename>
                <position>0,520</position>
            </image>
        </container>

        <container name="nowplaying">
            <area>0,0,800,80</area>
            <image name="mfe_black_top" draworder="1" fleximage="no">
                <filename>mfe_black_top.png</filename>
                <position>0,0</position>
            </image>
            <image name="mfe_brushed_top_a" draworder="3" fleximage="no">
                <filename>mfe_brushed_top_a.png</filename>
                <position>0,0</position>
            </image>
            <image name="mfe_brushed_top_bl" draworder="3" fleximage="no">
                <filename>mfe_brushed_top_bl.png</filename>
                <position>0,10</position>
            </image>
            <image name="mfe_brushed_top_br" draworder="3" fleximage="no">
                <filename>mfe_brushed_top_br.png</filename>
                <position>744,10</position>
            </image>
            <image name="mfe_brushed_top_c" draworder="3" fleximage="no">
                <filename>mfe_brushed_top_c.png</filename>
                <position>0,51</position>
            </image>
            <multitextarea name="now_playing_text" draworder="2" align="center">
                <font>now_playing_font</font>
                <area>38,9,726,40</area>

                <!--    
                <padding> is spaces to add to beginning and end of each
                string when it is displayed. We use padding here only
                because the "brushed metal" image on top of the text is
                curved
                -->
                <padding>1</padding>

                <!--
                <dropdelay> is number of milliseconds to wait between each
                step of scrolling a message down. If 0, no drop down
                -->
                <dropdelay>15</dropdelay>

                <!--
                <droppause> is number of milliseconds to wait after the drop
                before starting to scroll
                -->
                <droppause>500</droppause>

                <!--
                <scrolldelay> is number of milliseconds to wait between each
                horizontal step when scrolling
                -->
                <scrolldelay>50</scrolldelay>

                <!--
                <scrollpause> is number of milliseconds to wait after
                scrolling (if any) is done before then moving on to the next
                message
                -->
                <scrollpause>4000</scrollpause>

            </multitextarea>

            <statusbar name="time_progress" draworder="4" whitespace="15">
                <context>-1</context>
                <container fleximage="no">mfe_time_bar_back.png</container>
                <fill>mfe_time_bar.png</fill>
                <position>58,64</position>
                <orientation>LeftToRight</orientation>
            </statusbar>

        </container>

        <!--
        <container name="musicnavigator">
            <area>0,110,800,400</area>
            <image name="mfe_navback_upperleft" draworder="0" fleximage="no">
                <filename>mfe_navback_upperleft.png</filename>
                <position>0,0</position>
            </image>
        </container>    
        -->
        
        <container name="musictree">
            <area>20,110,780,400</area>
            <listtreearea name="musictree" draworder="0">
            <area>0,0,760,400</area>
            <listsize>0,0,376,380</listsize>
            <leveloffset>8</leveloffset>
            <gradient type="unselected" start="#bbbbbb" end="#777777" alpha="255">
            </gradient>
            <gradient type="selected" start="#0000ff" end="#505050" alpha="255">
            </gradient>
            <fcnfont name="active" function="active"></fcnfont>
            <fcnfont name="inactive" function="inactive"></fcnfont>
            </listtreearea>
        </container>

        <container name="playstatus">
            <area>0,520,800,80</area>
            <textarea name="current_mfd_text" draworder="0" align="center">
                <font>current_mfd_font</font>
                <area>19,33,114,40</area>
            </textarea>

            <image name="stop_button" draworder="0" fleximage="no">
                <filename>mfe_stop_on.png</filename>
                <position>300,0</position>
            </image>

            <image name="play_button" draworder="0" fleximage="no">
                <filename>mfe_play_on.png</filename>
                <position>370,0</position>
            </image>

            <image name="pause_button" draworder="0" fleximage="no">
                <filename>mfe_pause_on.png</filename>
                <position>440,0</position>
            </image>

            <pushbutton name="ff_button" draworder="0">
                <position>510,0</position>
                <image function="on" filename="mfe_1x1_blank.png"></image>
                <image function="off" filename="mfe_1x1_blank.png"></image>
                <image function="pushed" filename="mfe_ff_on.png"></image>
            </pushbutton>

            <pushbutton name="rew_button" draworder="0">
                <position>230,0</position>
                <image function="on" filename="mfe_1x1_blank.png"></image>
                <image function="off" filename="mfe_1x1_blank.png"></image>
                <image function="pushed" filename="mfe_rew_on.png"></image>
            </pushbutton>

            <pushbutton name="next_button" draworder="0">
                <position>580,0</position>
                <image function="on" filename="mfe_1x1_blank.png"></image>
                <image function="off" filename="mfe_1x1_blank.png"></image>
                <image function="pushed" filename="mfe_next_on.png"></image>
            </pushbutton>

            <pushbutton name="prev_button" draworder="0">
                <position>163,0</position>
                <image function="on" filename="mfe_1x1_blank.png"></image>
                <image function="off" filename="mfe_1x1_blank.png"></image>
                <image function="pushed" filename="mfe_prev_on.png"></image>
            </pushbutton>


        </container>

    </window>
</mythuitheme>
