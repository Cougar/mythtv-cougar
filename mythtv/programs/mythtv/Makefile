####### Build rules

all: Makefile $(TARGET)

$(TARGET): $(UICDECLS) $(OBJECTS) $(OBJMOC) ../libNuppelVideo/libNuppelVideo.a ../libmythtv/libmythtv.a
	$(LINK) $(LFLAGS) -o $(TARGET) $(OBJECTS) $(OBJMOC) $(LIBS)

mocables: $(SRCMOC)

$(MOC): 
	( cd $(QTDIR)/src/moc ; $(MAKE) )

Makefile: mythtv.pro  $(QTDIR)/mkspecs/linux-g++/qmake.conf ../settings.pro
	$(QMAKE) mythtv.pro
qmake: 
	@$(QMAKE) mythtv.pro

dist: 
	@mkdir -p .tmp/mythtv && $(COPY_FILE) --parents $(SOURCES) $(HEADERS) $(FORMS) $(DIST) .tmp/mythtv/ && ( cd `dirname .tmp/mythtv` && $(TAR) mythtv.tar mythtv && $(GZIP) mythtv.tar ) && mv `dirname .tmp/mythtv`/mythtv.tar.gz . && rm -rf .tmp/mythtv

