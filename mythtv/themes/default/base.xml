<?xml version="1.0" encoding="utf-8"?>
<mythuitheme>

    <!-- Base Font Definitions -->
    <font name="basesmall" face="Bitstream Vera Sans">
        <size>16</size>
        <color>white</color>
    </font>

    <font name="basemedium" from="basesmall">
        <size>18</size>
    </font>

    <font name="baselarge" from="basesmall">
        <size>20</size>
        <shadowcolor>black</shadowcolor>
        <shadowoffset>4,4</shadowoffset>
        <shadowalpha>64</shadowalpha>
        <bold>yes</bold>
    </font>

    <font name="basefontextralarge" from="basesmall">
        <size>24</size>
        <shadowcolor>black</shadowcolor>
        <shadowoffset>4,4</shadowoffset>
        <shadowalpha>64</shadowalpha>
        <bold>yes</bold>
    </font>

    <!-- Colour variations on base fonts -->
    <font name="basesmallgrey" from="basesmall">
        <color>grey</color>
    </font>

    <font name="basesmallblack" from="basesmall">
        <color>black</color>
    </font>

    <font name="basemediumgrey" from="basemedium">
        <color>grey</color>
    </font>

    <!-- Base definition of a buttonlist -->
    <buttonlist name="basebuttonlist">
        <area>0,0,10,10</area>
        <layout>vertical</layout>
        <activefont>basesmall</activefont>
        <inactivefont>basesmallgrey</inactivefont>
        <scrollarrows show="yes">
            <statetype name="upscrollarrow">
                <state type="off">
                    <imagetype name="upon">
                        <filename>lb-uparrow-reg.png</filename>
                    </imagetype>
                </state>
                <state type="full">
                    <imagetype name="upoff">
                        <filename>lb-uparrow-sel.png</filename>
                    </imagetype>
                </state>
            </statetype>
            <statetype name="downscrollarrow">
                <state type="off">
                    <imagetype name="dnon">
                        <filename>lb-dnarrow-reg.png</filename>
                    </imagetype>
                </state>
                <state type="full">
                    <imagetype name="dnoff">
                        <filename>lb-dnarrow-sel.png</filename>
                    </imagetype>
                </state>
            </statetype>
        </scrollarrows>
        <showarrow>yes</showarrow>
        <arrow filename="lb-arrow.png"/>
        <check-empty filename="lb-check-empty.png"/>
        <check-half filename="lb-check-half.png"/>
        <check-full filename="lb-check-full.png"/>
        <regular-background gradientstart="#505050" gradientend="#000000" gradientalpha="200"/>
        <selected-background gradientstart="#52CA38" gradientend="#349838" gradientalpha="255"/>
        <inactive-background gradientstart="#52CA38" gradientend="#349838" gradientalpha="100"/>
        <spacing>5</spacing>
        <margin>5,2</margin>
        <align>left,vcenter</align>
    </buttonlist>

    <!-- Base definition of a button -->
    <button name="basebutton">
        <position>0,0</position>
        <activefont>basemedium</activefont>
        <inactivefont>basemediumgrey</inactivefont>
        <showarrow>no</showarrow>
        <regular-background filename="text_button_off.png" />
        <selected-background filename="text_button_on.png" />
        <inactive-background filename="text_button_off.png" />
        <margin>5</margin>
        <align>center</align>
    </button>

    <!-- Base definition of a button in a checkbox configuration -->
    <checkbox name="basecheckbox">
        <position>0,0</position>
        <regular-background filename="checkbox_background_off.png" />
        <selected-background filename="checkbox_background_selected.png" />
        <inactive-background filename="checkbox_background_off.png" />
        <check-empty filename="lb-check-empty.png"/>
        <check-half filename="lb-check-half.png"/>
        <check-full filename="lb-check-full.png"/>
        <margin>5</margin>
    </checkbox>

    <spinbox name="basespinbox">
        <area>0,0,100,40</area>
        <layout>horizontal</layout>
        <activefont>basesmall</activefont>
        <inactivefont>basesmallgrey</inactivefont>
        <scrollarrows show="yes">
            <statetype name="upscrollarrow">
                <state type="off">
                    <imagetype name="upon">
                        <filename>lb-ltarrow-reg.png</filename>
                    </imagetype>
                </state>
                <state type="full">
                    <imagetype name="upoff">
                        <filename>lb-ltarrow-sel.png</filename>
                    </imagetype>
                </state>
            </statetype>
            <statetype name="downscrollarrow">
                <state type="off">
                    <imagetype name="dnon">
                        <filename>lb-rtarrow-reg.png</filename>
                    </imagetype>
                </state>
                <state type="full">
                    <imagetype name="dnoff">
                        <filename>lb-rtarrow-sel.png</filename>
                    </imagetype>
                </state>
            </statetype>
        </scrollarrows>
        <regular-background gradientstart="#505050" gradientend="#000000" gradientalpha="200"/>
        <selected-background gradientstart="#52CA38" gradientend="#349838" gradientalpha="255"/>
        <inactive-background gradientstart="#52CA38" gradientend="#349838" gradientalpha="100"/>
        <spacing>5</spacing>
        <margin>5,2</margin>
        <align>right,vcenter</align>
    </spinbox>

    <!-- Base definition of a textarea -->
    <textarea name="basetextarea">
        <area>0,0,10,10</area>
        <font>basesmall</font>
        <multiline>no</multiline>
        <align>left</align>
    </textarea>

    <!-- Base definition of a textarea -->
    <textedit name="basetextedit">
        <area>0,0,375,50</area>
        <font>basesmallblack</font>
        <cursor filename="cursor.png" />
        <margin>12</margin>
        <background filename="textedit_background.png" />
    </textedit>

    <!-- Popup Dialogue Box -->
    <window name="MythDialogBox">
        <area>150,50,500,500</area>
        <imagetype name="backimg">
            <filename>mythdialogbox-background.png</filename>
        </imagetype>

        <textarea name="messagearea" from="basetextarea">
            <area>12,20,470,210</area>
            <multiline>yes</multiline>
            <align>center</align>
        </textarea>

        <buttonlist name="list" from="basebuttonlist">
            <area>12,250,470,250</area>
            <drawfrombottom>yes</drawfrombottom>
            <align>center</align>
            <showarrow>no</showarrow>
            <scrollarrows show="no"></scrollarrows>
        </buttonlist>
    </window>

    <window name="MythBusyDialog">
        <area>305,205,191,191</area>
        <imagetype name="backimg">
            <filename>mythdialogbox-background.png</filename>
            <filepattern low="0" high="24">busyimages/%1.png</filepattern>
            <delay>250</delay>
        </imagetype>
        <textarea name="message" from="basetextarea">
            <area>0,0,191,191</area>
            <align>center</align>
        </textarea>
    </window>

</mythuitheme>
