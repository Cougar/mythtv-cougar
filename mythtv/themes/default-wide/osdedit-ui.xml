<?xml version="1.0" encoding="utf-8"?>
<mythuitheme>
    <window name="osdmenueditor">

        <font name="title" face="Bitstream Vera Sans">
            <color>#ffffff</color>
            <size>18</size>
            <bold>yes</bold>
        </font>


        <textarea name="title" from="basetextarea">
            <font>baselarge</font>
            <area>0,60,1000,40</area>
            <value>OSD Menu Editor</value>
            <align>center</align>
        </textarea>

        <buttonlist name="states" from="basebuttonlist">
            <area>100,140,300,300</area>
             <showarrow>no</showarrow>
        </buttonlist>

        <button name="done" from="basebutton">
            <position>500,620</position>
        </button>

        <buttonlist name="categories" from="basebuttonlist">
            <area>402,140,500,500</area>
            <statetype name="buttonitem">
                <state name="active">
                    <statetype name="inactivecolors">
                        <state name="inactive">
                            <imagetype name="buttonbackground">
                                <area> 0,0,500,30</area>
                                <gradient start="#111CCC" end="#FFF000" alpha="100" />
                             </imagetype>
                        </state>
                        <state name="active"></state>
                    </statetype>
                    <statetype name="entrycolors">
                        <state name="inactive">
                            <imagetype name="buttonbackground">
                                <area>0, 0, 500, 30</area>
                                <gradient start="#123456" end="#FFF000" alpha="100" />
                            </imagetype>
                        </state>
                        <state name="active"></state>
                    </statetype>
                </state>
                <state name="inactive">
                    <imagetype name="buttonbackground">
                        <gradient start="#111999" end="#555111" alpha="100" />
                    </imagetype>
                </state>
            </statetype>
            <showarrow>no</showarrow>
        </buttonlist>
    </window>
</mythuitheme>
