<mythuitheme>
 
  <window name="playback">

    <font name="active" face="Arial">
      <color>#ffffff</color>
      <size>16</size>
      <bold>yes</bold>
    </font>

    <font name="inactive" face="Arial">
      <color>#9999cc</color>
      <size>16</size>
      <bold>yes</bold>
    </font>

    <font name="currenttitle" face="Arial">
      <color>#ffff33</color>
      <size>18</size>
      <bold>yes</bold>
    </font>

    <font name="title" face="Arial">
      <color>#ffffff</color>
      <dropcolor>#000000</dropcolor>
      <size>27</size>
      <shadow>3,3</shadow>
      <bold>yes</bold>
    </font>

    <font name="info" face="Arial">
      <color>#ffffff</color>
      <size>17</size>
      <shadow>1,1</shadow>
      <bold>yes</bold>
    </font>

    <font name="message" face="Arial">
      <color>#ffffff</color>
      <size>17</size>
      <shadow>3,3</shadow>
      <bold>yes</bold>
    </font>

    <container name="background">
      <image name="filler" draworder="0" fleximage="yes">
        <filename>background.png</filename>
        <position>0,50</position>
      </image>
      <textarea name="messagedel" draworder="0">
        <area>20,15,800,35</area>
        <font>message</font>
        <value>Select a recording to permanently delete:</value>
        <context>1</context>
      </textarea>
      <textarea name="messageplay" draworder="0">
        <area>20,15,800,35</area>
        <font>message</font>
        <value>Select a recording to view:</value>
        <context>0</context>
      </textarea>
    </container>

    <container name="selector">
      <area>0,50,800,310</area>
      <listarea name="toptitles" draworder="2">
        <area>30,22,190,105</area>
        <activefont>active</activefont>
        <inactivefont>inactive</inactivefont>
        <items>3</items>
      </listarea>
      <image name="titlelines" draworder="3" fleximage="no">
        <filename>trans-titles.png</filename>
        <position>0,0</position>
      </image>
      <listarea name="bottomtitles" draworder="2">
        <area>30,172,190,105</area>
        <activefont>active</activefont>
        <inactivefont>inactive</inactivefont>
        <items>3</items>
      </listarea>
      <listarea name="showing" draworder="4">
        <area>240,18,600,265</area>
        <forcecolor>#ff3333</forcecolor>
        <activefont>active</activefont>
        <inactivefont>inactive</inactivefont>
        <columnpadding>10</columnpadding>
        <column number="1" width="320" context="-1"></column>
        <column number="2" width="60" context="-1"></column>
        <column number="3" width="110" context="0"></column>
        <column number="4" width="110" context="1"></column>
        <items>9</items>
        <image function="selectionbar" filename="bar.png" location="-13,-2"></image>
        <image function="uparrow" filename="uparrow.png" location="755,22"></image>
        <image function="downarrow" filename="downarrow.png" location="755,230"></image>
      </listarea>
      <image name="showinglines" draworder="5" fleximage="yes">
        <filename>showings.png</filename>
        <position>0,0</position>
      </image>
      <textarea name="current" draworder="6">
        <area>34,131,185,40</area>
        <font>currenttitle</font>
      </textarea>
    </container>

    <container name="program_info_play">
      <context>0</context>
      <area>0,360,599,240</area>
      <textarea name="title" draworder="6">
        <area>20,0,579,40</area>
        <font>title</font>
      </textarea>
      <textarea name="subtitle" draworder="6">
        <area>20,40,579,30</area>
        <font>info</font>
      </textarea>
      <textarea name="infotime" draworder="6">
        <area>20,70,160,30</area>
        <font>info</font>
        <value>Airdate:</value>
      </textarea>
      <textarea name="timedate" draworder="6">
        <area>180,70,430,30</area>
        <font>info</font>
      </textarea>
      <textarea name="infochan" draworder="6">
        <area>20,100,160,30</area>
        <font>info</font>
        <value>Channel:</value>
      </textarea>
      <textarea name="channel" draworder="6">
        <area>180,100,400,30</area>
        <font>info</font>
      </textarea>
      <textarea name="infodesc" draworder="6">
        <area>20,130,160,30</area>
        <font>info</font>
        <value>Description:</value>
      </textarea>
      <textarea name="description" draworder="6">
        <area>180,130,400,120</area>
        <font>info</font>
        <multiline>yes</multiline>
      </textarea>
    </container>

    <container name="program_info_del">
      <context>1</context>
      <area>0,360,599,190</area>
      <textarea name="title" draworder="6">
        <area>20,0,579,40</area>
        <font>title</font>
      </textarea>
      <textarea name="subtitle" draworder="6">
        <area>20,40,579,30</area>
        <font>info</font>
      </textarea>
      <textarea name="infotime" draworder="6">
        <area>20,70,160,30</area>
        <font>info</font>
        <value>Airdate:</value>
      </textarea>
      <textarea name="timedate" draworder="6">
        <area>180,70,430,30</area>
       <font>info</font>
      </textarea>
      <textarea name="infochan" draworder="6">
        <area>20,100,160,30</area>
        <font>info</font>
        <value>Channel:</value>
      </textarea>
      <textarea name="channel" draworder="6">
        <area>180,100,400,30</area>
        <font>info</font>
      </textarea>
      <textarea name="infodesc" draworder="6">
        <area>20,130,160,30</area>
        <font>info</font>
        <value>Description:</value>
      </textarea>
      <textarea name="description" draworder="6">
        <area>180,130,400,90</area>
        <font>info</font>
        <multiline>yes</multiline>
      </textarea>
    </container>

    <container name="video">
      <area>610,400,160,120</area>
    </container>

    <popup name="confirmdelete">
      <foreground>#ffffff</foreground>
      <highlight>#0177b2</highlight>
    </popup>

    <container name="usage">
      <context>1</context>
      <area>0,550,800,50</area>
      <statusbar name="usedbar" draworder="5">
        <container fleximage="yes">container.png</container>
	<fill>filler.png</fill>
        <position>20,0</position>
      </statusbar>
      <textarea name="freereport" draworder="6">
        <area>430,3,370,30</area>
        <font>info</font>
      </textarea>
    </container>

    <container name="norecordings_list">
      <textarea name="msg" align="center" draworder="8">
         <area>200,140,600,30</area>
         <font>info</font>
         <value>Sorry, No Recordings Available</value>
      </textarea>
    </container>

    <container name="norecordings_info">
      <textarea name="topline" align="center" draworder="8">
         <area>20,80,580,30</area>
         <font>info</font>
         <value>To schedule a recording, exit this screen and</value>
      </textarea>
      <textarea name="botline" align="center" draworder="8">
         <area>20,110,580,30</area>
         <font>info</font>
         <value>Select 'Schedule a Recording' from the Main Menu</value>
      </textarea>
    </container>

  </window>

  <window name="programfind">

    <font name="active" face="Arial">
      <color>#ffffff</color>
      <size>16</size>
      <bold>yes</bold>
    </font>

    <font name="inactive" face="Arial">
      <color>#999999</color>
      <size>16</size>
      <bold>yes</bold>
    </font>

    <font name="titleinfo" face="Arial">
      <color>#ffffff</color>
      <dropcolor>#000000</dropcolor>
      <size>18</size>
      <shadow>1,1</shadow>
      <bold>yes</bold>
    </font>

    <font name="info" face="Arial">
      <color>#ffffff</color>
      <size>17</size>
      <shadow>1,1</shadow>
      <bold>yes</bold>
    </font>

    <font name="recinfo" face="Arial">
      <color>#ffff33</color>
      <size>17</size>
      <shadow>1,1</shadow>
      <bold>yes</bold>
    </font>

    <font name="channel" face="Arial">
      <color>#ffffff</color>
      <size>22</size>
      <bold>yes</bold>
    </font>
  
    <container name="background">
      <image name="filler" draworder="0" fleximage="no">
        <filename>pf-top.png</filename>
        <position>26,28</position>
      </image>
      <image name="lineback" draworder="0" fleximage="no">
        <filename>pf-background.png</filename>
        <position>25,265</position>
      </image>
      <textarea name="prgrambar" align="center">
        <area>0,570,800,30</area>
        <font>info</font>
        <value>(4) Program Guide   **(6) Program Finder **</value>
        <context>1</context>
      </textarea>
    </container>

    <container name="selector">
      <area>25,260,770,310</area>
      <listarea name="alphabet" draworder="2">
        <area>23,8,65,295</area>
        <activefont>active</activefont>
        <inactivefont>inactive</inactivefont>
        <items>9</items>
        <image function="selectionbar" filename="pf-sel1.png" location="-14,-7"></image>
      </listarea>
      <listarea name="shows" draworder="2">
        <area>88,8,380,295</area>
        <activefont>active</activefont>
        <inactivefont>inactive</inactivefont>
        <column number="1" width="380" context="-1"></column>
        <items>9</items>
        <image function="selectionbar" filename="pf-sel2.png" location="-14,-7"></image>
      </listarea>
      <listarea name="times" draworder="2">
        <area>470,8,280,295</area>
        <activefont>active</activefont>
        <inactivefont>inactive</inactivefont>
        <forcecolor>#ffff33</forcecolor>
        <items>9</items>
        <image function="selectionbar" filename="pf-sel3.png" location="-8,-7"></image>
      </listarea>
      <image name="lines" draworder="5" fleximage="no">
        <filename>pf-lines.png</filename>
        <position>0,0</position>
      </image>
    </container>

    <container name="program_info">
      <area>25,25,750,220</area>
      <textarea name="title" draworder="6">
        <area>13,5,500,30</area>
        <font>titleinfo</font>
      </textarea>
      <textarea name="subtitle" draworder="6">
        <area>13,35,500,27</area>
        <font>info</font>
      </textarea>
      <textarea name="timedate" draworder="6">
        <area>13,62,500,27</area>
       <font>info</font>
      </textarea>
      <textarea name="channelnum" draworder="6" align="center">
        <area>500,60,250,40</area>
        <font>channel</font>
      </textarea>
      <textarea name="channelname" draworder="6" align="center">
        <area>500,95,250,40</area>
        <font>channel</font>
      </textarea>
      <textarea name="description" draworder="6">
        <area>13,89,500,85</area>
        <font>info</font>
        <multiline>yes</multiline>
      </textarea>
      <textarea name="recordingstatus" draworder="6">
        <area>13,185,500,27</area>
        <font>recinfo</font>
      </textarea>
    </container>

    <container name="help_info_1">
      <area>25,25,750,220</area>
      <textarea name="selectinfo" draworder="6">
        <area>10,5,500,30</area>
        <font>info</font>
        <value>Select a letter...</value>
      </textarea>
      <textarea name="pickinfo" draworder="6">
        <area>10,75,500,60</area>
        <font>info</font>
        <value>Pick the letter in which the show starts with, then hit ENTER or the right arrow</value>
        <multiline>yes</multiline>
      </textarea>
    </container>

    <container name="help_info_2">
      <area>25,25,750,220</area>
      <textarea name="selectprog" draworder="6">
        <area>10,5,500,30</area>
        <font>info</font>
        <value>Select a program...</value>
      </textarea>
      <textarea name="pickprog" draworder="6">
        <area>10,75,500,120</area>
        <font>info</font>
        <value>Select the title of the program you wish to find. When finished return with the left arrow key. Hitting 'info' will allow you to setup recording options.</value>
        <multiline>yes</multiline>
      </textarea>
    </container>

    <container name="noprograms">
      <area>25,25,750,220</area>
      <textarea name="noprog" draworder="6">
        <area>10,5,500,30</area>
        <font>info</font>
        <value>No Programs</value>
      </textarea>
      <textarea name="research" draworder="6">
        <area>10,75,500,120</area>
        <font>info</font>
        <value>There are no available programs under this search. Please select another search.</value>
        <multiline>yes</multiline>
      </textarea>
    </container>
 
  </window>

</mythuitheme>
