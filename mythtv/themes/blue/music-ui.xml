    (c) 2003 by a whole bunch of people associated with MythTV

-->
<mythuitheme>

    <!-- music selection screen -->
    <window name="music_select">
      <font name="inactive" base="list-inactive">
        <color>#aaaaee</color>
      </font>

      <container name="musictree">
        <area>20,20,780,400</area>

        <listtreearea name="musictree" draworder="0">
          <area>0,0,760,400</area>
          <listsize>0,0,450,360</listsize>
          <leveloffset>5</leveloffset>
          <gradient type="unselected" start="#505050" end="#000000" alpha="100">
          </gradient>
          <gradient type="selected" start="#52CA38" end="#349838" alpha="255">
          </gradient>
          <fcnfont name="list-active" function="active"></fcnfont>
          <fcnfont name="list-inactive" function="inactive"></fcnfont>
        </listtreearea>
      </container>

      <container name="info">
        <area>0,400,800,200</area>

        <image name="background" draworder="0" fleximage="no">
          <filename>music-sel-bg.png</filename>
          <position>0,0</position>
        </image>

        <textarea name="line1" draworder="1" align="left">
            <font>metadata</font>
            <area>10,0,780,30</area>
            <cutdown>yes</cutdown>
        </textarea>

        <textarea name="line2" draworder="1" align="left">
            <font>metadata</font>
            <area>10,30,780,30</area>
            <cutdown>yes</cutdown>
        </textarea>

        <textarea name="line3" draworder="1" align="left">
            <font>metadata</font>
            <area>10,60,780,30</area>
            <cutdown>yes</cutdown>
        </textarea>

        <textarea name="line4" draworder="1" align="left">
            <font>metadata</font>
            <area>10,90,780,30</area>
            <cutdown>yes</cutdown>
        </textarea>

        <textarea name="line5" draworder="1" align="left">
            <font>metadata</font>
            <area>10,120,780,30</area>
            <cutdown>yes</cutdown>
        </textarea>

        <textarea name="line6" draworder="1" align="left">
            <font>metadata</font>
            <area>10,150,780,30</area>
            <cutdown>yes</cutdown>
        </textarea>


      </container>

    </window>

    <!--
        The play music screen
    -->
    <window name="music_play">
    
        <!--
            First, define all the fonts we need on this screen
        -->

        <font name="infotext" base="info">
            <size>12</size>
        </font>


        <!--
            The (unchanging) background
        -->

        <container name="background">
            <image name="track_info_background" draworder="0" fleximage="no">
                <filename>track_info_background.png</filename>
                <position>0,315</position>
            </image>
            <image name="mm_blackhole_border" draworder="0" fleximage="no">
                <filename>mm_blackhole_border.png</filename>
                <position>133,332</position>
            </image>
            
        </container>
 
        <!--
            The view of playlists; tracks at the top
        -->
        <container name="musicselector">
            <area>0,10,800,310</area>
            <!--
                First appearance of a managedtreelist
                I'll explain as we go

                bins is how many visible layers of the
                tree there are. 
            -->
            <managedtreelist name="musictreelist" draworder="1" bins="2">
                <!-- 
                    regular area, but is only used if the user has
                    ShowWholeTree set to false.
                -->
                <area>40,10,720,270</area>
                <!--
                    An image to show the current navigation node
                -->
                <image function="selectionbar" filename="cr-selectbar.png"   location="-12,-5" padding="12" fleximage="no"></image>
                <!--
                    Some arrow images
                 -->
                <image function="uparrow" filename="uparrow.png"  location="785,12"></image>
                <image function="downarrow" filename="downarrow.png"  location="785,268"></image>
                <image function="leftarrow" filename="mm_left_arrow.png"></image>
                <image function="rightarrow" filename="mm_right_arrow.png"></image>
                <!-- 
                    the area of particular bins
                    you can make them show right to left,
                    top to bottom, and layer graphics on top 
                    however you like

                    NB: bins number 1 to # of bins inclusive
                        not 0 to #-1
                -->
                <bin number="1">
                    <area>30,16,190,250</area>
                    <fcnfont name="list-active" function="active"></fcnfont>
                    <fcnfont name="list-inactive" function="inactive"></fcnfont>
                    <fcnfont name="list-selected" function="selected"></fcnfont>
                </bin>
                <bin number="2">
                    <area>235,10,535,270</area>
                    <fcnfont name="list-active" function="active"></fcnfont>
                    <fcnfont name="list-selected" function="selected"></fcnfont>
                    <fcnfont name="list-inactive" function="inactive"></fcnfont>
                </bin>
            </managedtreelist>

            <!--
                An image that go "on top" of the list bins
            

            <image name="showinglines" draworder="2" fleximage="yes">
                <context>1</context>
                <filename>showings.png</filename>
                <position>0,0</position>
            </image>
            -->
            <!--
                The main background of the tracks
            -->
            <image name="mm_waiting" draworder="0" fleximage="no">
                <context>0</context>
                <filename>mm_waiting.png</filename>
                <position>0,0</position>
            </image>
            <textarea name="waiting_text" draworder="1" align="center">
                <context>0</context>
                <font>info</font>
                <area>190,140,380,40</area>
                <value>Please Wait...</value>
            </textarea>

            <!--
                An image for when we're only showing the last bin 
                (ie. just the active playlist)
            -->

            <image name="mm_waiting" draworder="0" fleximage="no">
                <context>2</context>
                <filename>mm_waiting.png</filename>
                <position>0,0</position>
            </image>
        </container>

        <!--
            An area to hold info about the playing track
        -->

        <container name="trackinfo">
            <area>0,315,680,160</area>

            <textarea name="title_text" draworder="1" align="left">
                <font>title</font>
                <area>270,15,415,34</area>
                <cutdown>yes</cutdown>
            </textarea>

            <textarea name="artist_text" draworder="1" align="left">
                <font>subtitle</font>
                <area>270,50,415,25</area>
                <cutdown>yes</cutdown>
            </textarea>

            <textarea name="album_text" draworder="1" align="left">
                <font>metadata</font>
                <area>270,73,415,25</area>
                <cutdown>yes</cutdown>
            </textarea>

            <repeatedimage name="ratings_image" draworder="1" fleximage="no">
                <filename>mm_rating.png</filename>
                <position>270,105</position>
                <orientation>LeftToRight</orientation>
            </repeatedimage>

            <textarea name="current_visualization_text" draworder="1" align="right">
                <font>info</font>
                <area>470,100,200,25</area>
                <cutdown>no</cutdown>
            </textarea>

            <textarea name="info_text" draworder="1" align="left">
                <font>infotext</font>
                <area>270,129,250,25</area>
            </textarea>

            <textarea name="time_text" draworder="1" align="right">
                <font>info</font>
                <area>485,125,185,25</area>
            </textarea>

            <blackhole name="visual_blackhole">
                <area>135,20,122,124</area>
            </blackhole>

        </container>

        <!--
            On screen volume display
        -->

        <container name="volumedisplay">
            <area>690,315,40,160</area>
            <statusbar name="volume_status" draworder="-1" whitespace="5">
                <container fleximage="no">mm_volume_background.png</container>
                <fill>mm_volume_tick.png</fill>
                <position>0,0</position>
                <orientation>BottomToTop</orientation>
            </statusbar>
        </container>

        <!--
            All the buttons
        -->

        <container name="musicbuttons">
            <area>15,475,785,110</area>

            <textbutton name="shuffle_button" draworder="0">
                <position>20,0</position>
                <image function="on" filename="text_button_on.png"></image>
                <image function="off" filename="text_button_off.png"></image>
                <image function="pushed" filename="text_button_pushed.png"></image>
                <font>small-info</font>
            </textbutton>

            <textbutton name="repeat_button" draworder="0">
                <position>215,0</position>
                <image function="on" filename="text_button_on.png"></image>
                <image function="off" filename="text_button_off.png"></image>
                <image function="pushed" filename="text_button_pushed.png"></image>
                <font>small-info</font>
            </textbutton>

            <textbutton name="pledit_button" draworder="0">
                <position>410,0</position>
                <image function="on" filename="text_button_on.png"></image>
                <image function="off" filename="text_button_off.png"></image>
                <image function="pushed" filename="text_button_pushed.png"></image>
                <font>small-info</font>
            </textbutton>

            <textbutton name="vis_button" draworder="0">
                <position>605,0</position>
                <image function="on" filename="text_button_on.png"></image>
                <image function="off" filename="text_button_off.png"></image>
                <image function="pushed" filename="text_button_pushed.png"></image>
                <font>small-info</font>
            </textbutton>

            <pushbutton name="prev_button" draworder="0">
                <position>10,50</position>
                <image function="on" filename="prev_button_on.png"></image>
                <image function="off" filename="prev_button_off.png"></image>
                <image function="pushed" filename="prev_button_pushed.png"></image>
            </pushbutton>
            
            <pushbutton name="rew_button" draworder="0">
                <position>125,50</position>
                <image function="on" filename="rew_button_on.png"></image>
                <image function="off" filename="rew_button_off.png"></image>
                <image function="pushed" filename="rew_button_pushed.png"></image>
            </pushbutton>
            
            <pushbutton name="pause_button" draworder="0">
                <position>240,50</position>
                <image function="on" filename="pause_button_on.png"></image>
                <image function="off" filename="pause_button_off.png"></image>
                <image function="pushed" filename="pause_button_pushed.png"></image>
            </pushbutton>
            
            <pushbutton name="play_button" draworder="0">
                <position>355,50</position>
                <image function="on" filename="play_button_on.png"></image>
                <image function="off" filename="play_button_off.png"></image>
                <image function="pushed" filename="play_button_pushed.png"></image>
            </pushbutton>
            
            <pushbutton name="stop_button" draworder="0">
                <position>470,50</position>
                <image function="on" filename="stop_button_on.png"></image>
                <image function="off" filename="stop_button_off.png"></image>
                <image function="pushed" filename="stop_button_pushed.png"></image>
            </pushbutton>
            
            <pushbutton name="ff_button" draworder="0">
                <position>585,50</position>
                <image function="on" filename="ff_button_on.png"></image>
                <image function="off" filename="ff_button_off.png"></image>
                <image function="pushed" filename="ff_button_pushed.png"></image>
            </pushbutton>
            
            <pushbutton name="next_button" draworder="0">
                <position>700,50</position>
                <image function="on" filename="next_button_on.png"></image>
                <image function="off" filename="next_button_off.png"></image>
                <image function="pushed" filename="next_button_pushed.png"></image>
            </pushbutton>
            
        </container>

  </window>
</mythuitheme>
