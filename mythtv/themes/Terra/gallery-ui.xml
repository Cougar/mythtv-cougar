<?xml version="1.0" encoding="utf-8"?>
<mythuitheme>

    <window name="gallery">

        <imagetype name="topbar" from="basetopbar" />

        <textarea name="heading" from="baseheading">
            <value>Photo Gallery</value>
        </textarea>

        <imagetype name="galleryframe">
            <position>0,52</position>
            <filename>gallery/galleryframe.png</filename>
        </imagetype>

        <buttonlist name="images">
            <area>0,55,1280,5850</area>
            <buttonarea>0,0,1280,585</buttonarea>
            <wrapstyle>selection</wrapstyle>
            <layout>grid</layout>
            <spacing>0</spacing>
            <statetype name="buttonitem">
                <state name="active">
                    <area>0,0,256,192</area>
                    <imagetype name="buttonimage">
                        <area>0,0,256,192</area>
                        <preserveaspect>yes</preserveaspect>
                    </imagetype>
                    <statetype name="buttoncheck">
                        <position>130,100</position>
                        <showempty>yes</showempty>
                        <state type="full">
                            <imagetype name="marked">
                                <filename>gallery/mark.png</filename>
                            </imagetype>
                        </state>
                    </statetype>
                </state>
                <state name="selected" from="active">
                    <area>0,0,302,228</area>
                    <imagetype name="buttonimage">
                        <area>-23,-18,302,228</area>
                        <preserveaspect>yes</preserveaspect>
                    </imagetype>
                    <imagetype name="selectedframe">
                        <position>-25,-20</position>
                        <filename>gallery/selected_frame.png</filename>
                    </imagetype>
                </state>
            </statetype>
        </buttonlist>

        <textarea name="text">
            <area>20,640,1240,40</area>
            <align>hcenter</align>
            <font>baselarge</font>
        </textarea>

    </window>

</mythuitheme>
