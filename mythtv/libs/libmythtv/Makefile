####### Build rules

all: Makefile $(TARGET)

staticlib: $(TARGET)

$(TARGET): $(UICDECLS) $(OBJECTS) $(OBJMOC) ../libNuppelVideo/libNuppelVideo.a
	-rm -f $(TARGET)
	$(AR) $(TARGET) $(OBJECTS) $(OBJMOC)
	

mocables: $(SRCMOC)

$(MOC): 
	( cd $(QTDIR)/src/moc ; $(MAKE) )

Makefile: libmythtv.pro  $(QTDIR)/mkspecs/linux-g++/qmake.conf ../settings.pro
	$(QMAKE) libmythtv.pro
qmake: 
	@$(QMAKE) libmythtv.pro

dist: 
	@mkdir -p .tmp/mythtv && $(COPY_FILE) --parents $(SOURCES) $(HEADERS) $(FORMS) $(DIST) .tmp/mythtv/ && ( cd `dirname .tmp/mythtv` && $(TAR) mythtv.tar mythtv && $(GZIP) mythtv.tar ) && mv `dirname .tmp/mythtv`/mythtv.tar.gz . && rm -rf .tmp/mythtv

mocclean:

uiclean:

