####### Install

install_installfiles: 
	@test -d $(INSTALL_ROOT)/usr/local/share/mythtv/ || mkdir -p $(INSTALL_ROOT)/usr/local/share/mythtv/
	-$(COPY_FILE) "helr.ttf" "$(INSTALL_ROOT)/usr/local/share/mythtv/"
	
uninstall_installfiles: 
	-$(DEL_FILE) -r "$(INSTALL_ROOT)/usr/local/share/mythtv/"
	-$(DEL_DIR) "$(INSTALL_ROOT)/usr/local/share/mythtv/"

install: all install_installfiles 

uninstall: uninstall_installfiles 

