<mythuitheme>

  <window name="status">

    <font name="active" face="Bitstream Vera Sans">
      <color>#ffffff</color>
      <size>17</size>
      <bold>yes</bold>
    </font>

    <font name="title" face="Bitstream Vera Sans">
      <color>#ffffff</color>
      <size>18</size>
      <bold>yes</bold>
      <shadow>2,2</shadow>
    </font>

    <font name="selected" face="Bitstream Vera Sans">
      <color>#ffff33</color>
      <size>17</size>
      <bold>yes</bold>
      <shadow>2,1</shadow>
    </font>

    <font name="status" face="Bitstream Vera Sans">
      <color>#ffffff</color>
      <size>14</size>
      <bold>yes</bold>
    </font>

    <font name="status_selected" face="Bitstream Vera Sans">
      <color>#ffff33</color>
      <size>14</size>
      <bold>yes</bold>
    </font>

    <font name="status_error" face="Bitstream Vera Sans">
      <color>#ff0000</color>
      <size>14</size>
      <bold>yes</bold>
    </font>

    <font name="status_warning" face="Bitstream Vera Sans">
      <color>#ff8429</color>
      <size>14</size>
      <bold>yes</bold>
    </font>

    <container name="topbar">
      <area>0,0,800,200</area>
      <textarea name="heading" draworder="0">
        <area>30,30,740,40</area>
        <font>title</font>
        <value>System Status - Select a category to view the status</value>
      </textarea>
      <textarea name="helptext" draworder="0">
        <area>30,70,740,150</area>
        <font>status</font>
        <value>This screen displays the status of various system components</value>
        <multiline>yes</multiline>
      </textarea>
    </container>

    <container name="selector">
      <area>0,210,265,590</area>
      <listarea name="icon_list" draworder="2">
       <area>40,30,240,350</area>
       <fcnfont name="active" function="active"></fcnfont>
       <fcnfont name="active" function="inactive"></fcnfont>
       <fcnfont name="selected" function="selected"></fcnfont>
       <column number="1" width="200" context="-1"></column>
       <items>8</items>
      </listarea>
      <image name="iconlines" draworder="0" fleximage="no">
        <filename>status/statbox1.png</filename>
        <position>20,0</position>
      </image>
    </container>

    <container name="content">
      <area>260,210,535,590</area>
      <listarea name="list_area" draworder="2">
       <area>10,10,495,345</area>
       <fcnfont name="status" function="active"></fcnfont>
       <fcnfont name="status" function="inactive"></fcnfont>
       <fcnfont name="status_selected" function="selected"></fcnfont>
       <fcnfont name="status_error" function="error"></fcnfont>
       <fcnfont name="status_warning" function="warning"></fcnfont>
       <column number="1" width="480" context="-1"></column>
       <items>11</items>
       <image function="selectionbar" filename="status/statbar.png" location="-3,-5"></image>
       <image function="uparrow" filename="shared/mv_up_arrow.png" location="460,10"></image>
       <image function="downarrow" filename="shared/mv_down_arrow.png" location="460,320"></image>
      </listarea>
      <image name="datalines" draworder="0" fleximage="no">
        <filename>status/statbox2.png</filename>
        <position>-2,1</position>
      </image>
     </container>

  </window>

</mythuitheme>

