<mythuitheme>

  <window name="status">

    <font name="active" face="Bitstream Vera Sans">
      <color>#ffffff</color>
      <size>18</size>
      <bold>no</bold>
    </font>

    <font name="title" face="Bitstream Vera Sans">
      <color>#ffffff</color>
      <size>18</size>
      <bold>no</bold>
    </font>
    
    <font name="greytitle" face="Bitstream Vera Sans">
      <color>#cccccc</color>
      <size>18</size>
      <bold>yes</bold>
    </font>

    <font name="selected" face="Bitstream Vera Sans">
      <color>#ffffff</color>
      <size>18</size>
      <bold>no</bold>
    </font>

    <font name="status" face="Bitstream Vera Sans">
      <color>#ffffff</color>
      <size>16</size>
      <bold>no</bold>
    </font>

    <font name="status_selected" face="Bitstream Vera Sans">
      <color>#ffffff</color>
      <size>16</size>
      <bold>no</bold>
    </font>

    <font name="status_error" face="Bitstream Vera Sans">
      <color>#ff0000</color>
      <size>16</size>
      <bold>no</bold>
    </font>

    <font name="status_warning" face="Bitstream Vera Sans">
      <color>#ff8429</color>
      <size>16</size>
      <bold>no</bold>
    </font>

    <container name="topbar">
      <area>40,30,1200,180</area>
      <textarea name="heading" draworder="0">
        <area>40,10,1200,40</area>
        <font>greytitle</font>
        <value>System Status - Select a category to view the status</value>
      </textarea>
      <textarea name="helptext" draworder="0">
        <area>40,50,1100,230</area>
        <font>title</font>
        <value>This screen displays the status of various system components</value>
        <multiline>yes</multiline>
      </textarea>
    </container>

    <container name="selector">
      <area>40,250,300,430</area>
      <listarea name="icon_list" draworder="2">
       <area>39,14,300,380</area>
       <fcnfont name="active" function="active"></fcnfont>
       <fcnfont name="active" function="inactive"></fcnfont>
       <fcnfont name="selected" function="selected"></fcnfont>
       <column number="1" width="300" context="-1"></column>
       <items>8</items>
       <image function="selectionbar" filename="status/statbox3.png" location="-10,-6"></image>
      </listarea>

      <image name="iconlines" draworder="0" fleximage="no">
        <filename>status/stbox1.png</filename>
        <position>5,0</position>
      </image>

    </container>

    <container name="content">
      <area>350,250,880,430</area>
      <listarea name="list_area" draworder="2">
       <area>20,14,860,410</area>
       <fcnfont name="status" function="active"></fcnfont>
       <fcnfont name="status" function="inactive"></fcnfont>
       <fcnfont name="status_selected" function="selected"></fcnfont>
       <fcnfont name="status_error" function="error"></fcnfont>
       <fcnfont name="status_warning" function="warning"></fcnfont>
       <column number="1" width="860" context="-1"></column>
       <items>11</items>
       <image function="selectionbar" filename="tvplayback/tv-selectbar.png" location="-10,-7"></image>
       <image function="uparrow" filename="shared/uparrow.png" location="775,18"></image>
       <image function="downarrow" filename="shared/downarrow.png" location="775,380"></image>
      </listarea>

      <image name="iconlines" draworder="0" fleximage="no">
        <filename>status/stbox2.png</filename>
        <position>0,0</position>
      </image>

    </container>

  </window>

</mythuitheme>

