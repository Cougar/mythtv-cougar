<mythuitheme>

  <window name="backgroundwindow">
    <imagetype name="backimg">
      <filename>background.png</filename>
    </imagetype>

    <imagetype name="logo">
      <filename>mythlogo.png</filename>
      <position>140,510</position>
<!--      <alphapulse min="0" max="180" change="1"> -->
          <alpha>180</alpha>
    </imagetype>

    <imagetype name="header">
			<filename>bg_header.png</filename>
			<position>0,0</position>
    </imagetype>

    <font name="clock"  base="medium">
         <color>#FFFFFF</color>
         <size>18</size>
         <size:small>18</size:small>
         <size:big>22</size:big>
         <bold>no</bold>
    </font>

    <font name="small" base="medium">
      <color>#FFFFFF</color>
      <size>14</size>
      <size:small>12</size:small>
      <size:big>16</size:big>
      <bold>yes</bold>
    </font>

    <font name="medium" base="medium">
      <color>#FFFFFF</color>
      <size>16</size>
      <size:small>14</size:small>
      <size:big>20</size:big>
      <bold>yes</bold>
    </font>

    <font name="large" base="medium">
      <color>#FFFFFF</color>
      <size>20</size>
      <size:small>18</size:small>
      <size:big>22</size:big>
      <bold>yes</bold>
    </font>

    <clock name="clock">
         <color>#FFFFFF</color>
         <area>40,60,300,40</area>
         <font>clock</font>
         <align>left</align>
         <format>%DATE%, %TIME%</format>
    </clock>

  </window>

</mythuitheme>

