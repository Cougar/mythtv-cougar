                    Some arrow images
                -->
                <image function="uparrow" filename="shared/uparrow.png" location="0,20"></image>
                <image function="downarrow" filename="shared/downarrow.png" location="0,-20"></image>
                <image function="leftarrow" filename="shared/mv_left_arrow.png" location="-20,0"></image>
                <image function="rightarrow" filename="shared/mv_right_arrow.png" location="-20,0"></image>
                <!--
                    the area of particular bins
                    you can make them show right to left,
                    top to bottom, and layer graphics on top
                    however you like

                    NB: bins number 1 to # of bins inclusive
                        not 0 to #-1
                -->
                <bin number="1">
                    <area>30,15,300,360</area>
                    <fcnfont name="active" function="active"></fcnfont>
                    <fcnfont name="inactive" function="inactive"></fcnfont>
                    <fcnfont name="selected" function="selected"></fcnfont>
