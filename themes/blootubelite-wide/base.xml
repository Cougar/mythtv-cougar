<mythuitheme>

  <window name="backgroundwindow">
    <imagetype name="backimg">
      <filename>background.png</filename>
    </imagetype>

    <font name="small" face="Bitstream Vera Sans">
      <color>#FFFFFF</color>
      <size>14</size>
      <size:small>12</size:small>
      <size:big>16</size:big>
      <bold>yes</bold>
    </font>

    <font name="medium" face="Bitstream Vera Sans">
      <color>#FFFFFF</color>
      <size>16</size>
      <size:small>14</size:small>
      <size:big>20</size:big>
      <bold>yes</bold>
    </font>

    <font name="large" face="Bitstream Vera Sans">
      <color>#FFFFFF</color>
      <size>20</size>
      <size:small>18</size:small>
      <size:big>22</size:big>
      <bold>yes</bold>
    </font>

    <font name="clock"  face="Bitstream Vera Sans">
        <color>#FFFFFF</color>
        <size>22</size>
        <size:small>18</size:small>
        <size:big>22</size:big>
        <bold>no</bold>
    </font>

  <clock name="clock">
      <area>570,60,500,40</area>
      <font>clock</font>
      <format>%DATE%, %TIME%</format>
      <align>left</align>
      <alpha>100</alpha>
  </clock>

  </window>

</mythuitheme>

